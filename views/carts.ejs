<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Cart - HomeBitez</title>

<link href="https://fonts.googleapis.com/css2?family=Fraunces:wght@600;700;800&family=Manrope:wght@400;600;700&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
  body{
      margin:0;
      font-family:Arial, sans-serif;
      background:
        radial-gradient(circle at 8% 0%, #fff7ea 0%, #f7efe3 42%),
        linear-gradient(180deg, #f7efe3 0%, #f3e8d8 100%);
      color:#2f2419;
  }

  .cart-wrap{
      max-width: 1180px;
      margin: 0 auto;
      padding: 26px 20px 50px;
  }

  .cart-hero{
      margin-bottom: 16px;
      display:flex;
      justify-content:space-between;
      align-items:flex-end;
      gap: 14px;
      flex-wrap: wrap;
  }

  .hero-title{
      margin:0;
      font-size:30px;
      line-height:1.1;
      font-family:'Fraunces', "Times New Roman", serif;
      letter-spacing:0.2px;
  }

  .hero-sub{
      margin:6px 0 0;
      color:#6f5f4a;
      font-size:14px;
  }

  .stepper{
      display:flex;
      align-items:center;
      gap:8px;
  }

  .step{
      border-radius:999px;
      border:1px solid #dfc89f;
      background:#fff8ec;
      color:#76542d;
      padding:6px 10px;
      font-size:12px;
      font-weight:700;
      white-space:nowrap;
  }

  .step.active{
      background:#d09a2e;
      color:#fff;
      border-color:#d09a2e;
  }

  .cart-layout{
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 18px;
      align-items: start;
  }

  .card-surface{
      background: linear-gradient(145deg, #fffaf2 0%, #f3e4cf 100%);
      border:1px solid #ead7b7;
      border-radius: 14px;
      padding: 26px 24px;
      box-shadow: 0 10px 28px rgba(0,0,0,0.08);
  }

  .items-list{
      display: flex;
      flex-direction: column;
      gap: 12px;
  }

  .cart-row{
      display: grid;
      grid-template-columns: 36px 78px 1fr 130px 170px;
      gap: 14px;
      align-items: center;
      padding: 14px;
      border: 1px solid rgba(0,0,0,0.06);
      border-radius: 12px;
      background:#fff7ea;
      position: relative;
      transition: transform .14s ease, box-shadow .14s ease;
  }

  .cart-row:hover{
      transform: translateY(-1px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.07);
  }

  .item-img{
      width: 70px;
      height: 70px;
      border-radius: 12px;
      object-fit: cover;
      background: #fff;
      border: 1px solid rgba(0,0,0,0.08);
  }

  .item-name{
      font-size: 16px;
      font-weight: 600;
      margin: 0;
      line-height: 1.2;
      color:#2f2a24;
  }

  .row-select{
      display:flex;
      align-items:center;
      justify-content:center;
  }

  .row-select input{
      width:18px;
      height:18px;
      cursor:pointer;
      accent-color:#d09a2e;
  }

  .row-badge{
      display:inline-flex;
      align-items:center;
      justify-content:center;
      width:24px;
      height:24px;
      border-radius:50%;
      background:#fde6bd;
      color:#7c5618;
      font-size:12px;
      font-weight:700;
      margin-right:8px;
  }

  .item-sub{
      font-size: 13px;
      margin: 6px 0 0;
      color: #4b4b4b;
  }

  .edit-link{
      font-size: 12px;
      margin-left: 10px;
      text-decoration: none;
      color: #0b63d1;
      cursor: pointer;
      font-weight: 600;
  }
  .edit-link:hover{ text-decoration: underline; }

  .price-col{
      text-align: left;
      font-weight: 600;
      color:#2f2a24;
  }

  .unit-price{
      font-size: 13px;
      color:#6d6151;
      font-weight: 500;
  }

  .qty-col{
      display:flex;
      justify-content:flex-end;
      align-items:center;
      gap: 8px;
  }

  .qty-btn{
      width: 32px;
      height: 32px;
      border-radius: 50%;
      border: 1px solid rgba(0,0,0,0.15);
      background:#fff;
      font-weight: 600;
      line-height: 1;
      cursor: pointer;
      transition: all .12s ease;
  }

  .qty-btn:hover{
      background:#fff2d8;
      border-color:#d5a554;
  }

  .qty-display{
      min-width: 32px;
      text-align: center;
      font-weight: 600;
  }

  .section-block{
      background:#fff7ea;
      border-radius: 12px;
      border:1px solid rgba(0,0,0,0.06);
      padding: 14px 16px;
      display:grid;
      grid-template-columns: 1fr auto;
      gap: 10px;
      align-items:center;
  }

  .label{
      font-size: 14px;
      font-weight: 600;
      color:#2f2a24;
      margin:0;
  }

  .hint{
      font-size: 12px;
      color:#6b5d4a;
      margin:0;
  }

  .summary-card{
      position: sticky;
      top: 90px;
      border: 1px solid #ead7b7;
      background: linear-gradient(180deg, #ffefd8 0%, #f6dfbf 100%);
  }

  .summary-title{
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap:8px;
  }

  .summary-pill{
      border-radius:999px;
      border:1px solid #dcb97b;
      padding:5px 9px;
      font-size:12px;
      font-weight:700;
      color:#7d571f;
      background:#fff5df;
  }

  .summary-row{
      display:flex;
      justify-content:space-between;
      align-items:center;
      margin: 8px 0;
      font-weight:600;
      color:#2f2a24;
  }

  .summary-row.small{
      font-weight:500;
      color:#5a5144;
  }

  .btn-back{
      padding: 12px 18px;
      border: 1px solid #d1b26f;
      background:#fffaf2;
      border-radius: 10px;
      font-weight: 600;
      text-decoration: none;
      color: #2f2419;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      transition: all .15s ease;
  }
  .btn-back:hover{ background:#fff3d6; }

  .btn-checkout{
      padding: 12px 18px;
      background:#d09a2e;
      color:#fffaf2;
      border-radius:10px;
      border:none;
      font-weight:600;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      transition: transform .12s ease, box-shadow .12s ease;
      box-shadow:0 8px 18px rgba(0,0,0,0.08);
  }

  .quick-remove{
      position:absolute;
      top:10px;
      right:10px;
      border:none;
      background:transparent;
      color:#8d7a5a;
      font-size:13px;
      font-weight:700;
      cursor:pointer;
      padding:4px;
      border-radius:8px;
  }

  .quick-remove:hover{
      color:#b94f4f;
      background:#fff0f0;
  }

  .summary-note{
      margin-top:10px;
      font-size:12px;
      color:#6f5f4a;
      line-height:1.45;
  }
  .btn-checkout:hover{
      transform: translateY(-1px);
      box-shadow: 0 10px 22px rgba(0,0,0,0.12);
      color:#fffaf2;
  }

  .btn-area{
      display:flex;
      justify-content:flex-end;
      gap: 12px;
      padding-top: 14px;
      flex-wrap:wrap;
  }

  .empty{
      padding: 40px 0 10px;
      text-align:center;
      color:#333;
  }

  /* Switch align like reference */
  .switch-wrap{
      display:flex;
      align-items:center;
      justify-content:flex-end;
  }

  @media (max-width: 980px){
      .cart-layout{
          grid-template-columns: 1fr;
      }
      .summary-card{
          position: static;
      }
  }

  @media (max-width: 640px){
      .cart-hero{
          align-items:flex-start;
      }

      .hero-title{
          font-size:24px;
      }

      .cart-row{
          grid-template-columns: 34px 70px 1fr;
          grid-template-rows: auto auto;
          gap: 10px;
      }
      .price-col, .qty-col{
          justify-content:flex-start;
          text-align:left;
      }
      .price-col{ order:3; }
      .qty-col{ order:4; }
  }
</style>
</head>

<body>

<%- include('partials/navbar-user') %>

<div class="cart-wrap">
  <div class="cart-hero">
    <div>
      <h1 class="hero-title">Your Cart</h1>
      <p class="hero-sub">Review items, update quantities, and head to checkout when ready.</p>
    </div>
    <div class="stepper">
      <span class="step active">1. Cart</span>
      <span class="step">2. Checkout</span>
      <span class="step">3. Payment</span>
    </div>
  </div>

  <div class="cart-layout">

    <% if (!cart || cart.length === 0) { %>
      <div class="card-surface" style="grid-column:1 / -1;">
        <div class="empty">
          <h5 style="margin-bottom:10px; font-weight:600;">Your cart is empty</h5>
          <p style="margin:0;">Go to the menu and add some items :)</p>

          <div class="btn-area" style="justify-content:center;">
            <a href="/menu" class="btn-back">Back to Menu</a>
          </div>
        </div>
      </div>
    <% } else { %>

      <!-- LEFT COLUMN: items + preferences -->
      <div class="card-surface">
          <p style="margin:0 0 14px; color:#6f5f4a; font-size:13px;">
            <%= cart.length %> item type(s) in your cart
          </p>

        <div class="items-list">
          <div class="section-block" style="grid-template-columns: 1fr auto; margin-bottom: 2px;">
            <div>
              <p class="label">Select Items For Checkout</p>
              <p class="hint">Only checked items will be sent to checkout.</p>
            </div>
            <label class="d-flex align-items-center gap-2" style="margin:0; font-size:13px; color:#4d4337;">
              <input type="checkbox" id="selectAllCartItems" style="width:18px; height:18px; accent-color:#d09a2e;">
              Select all
            </label>
          </div>

          <% cart.forEach((item, i) => { %>
            <div class="cart-row" data-name="<%= item.name %>">
              <button class="quick-remove" data-name="<%= item.name %>" title="Remove item">Remove</button>
              <div class="row-select">
                <input
                  class="item-select"
                  type="checkbox"
                  data-name="<%= item.name %>"
                  <%= (Array.isArray(checkoutSelection) && checkoutSelection.length)
                        ? (checkoutSelection.includes(item.name) ? 'checked' : '')
                        : 'checked' %>>
              </div>
              <div>
                <img class="item-img"
                     src="<%= (item.image && item.image.trim() !== '') ? item.image : '/images/flatlay-iron-skillet-with-meat-and-other-food.jpg' %>"
                     alt="<%= item.name %>">
              </div>

              <div>
                <p class="item-name">
                  <span class="row-badge"><%= i + 1 %></span><%= item.name %>
                  <a class="edit-link"
                     data-bs-toggle="modal"
                     data-bs-target="#editModal"
                     data-name="<%= item.name %>"
                     data-qty="<%= item.quantity %>">
                     Edit
                  </a>
                </p>

                <% if (item.notes) { %>
                  <p class="item-sub">â€¢ <%= item.notes %></p>
                <% } %>
              </div>

              <div class="price-col">
                <div class="unit-price">Unit</div>
                $<%= Number(item.price).toFixed(2) %>
              </div>

              <div class="qty-col">
                <button class="qty-btn" data-dir="-1" data-name="<%= item.name %>" data-qty="<%= item.quantity %>">-</button>
                <div class="qty-display" data-name="<%= item.name %>">x<%= item.quantity %></div>
                <button class="qty-btn" data-dir="1" data-name="<%= item.name %>" data-qty="<%= item.quantity %>">+</button>
              </div>
            </div>
          <% }) %>
        </div>

        <div style="margin-top:18px; display:flex; flex-direction:column; gap:10px;">
          <div class="section-block">
            <div>
              <p class="label">Cutlery</p>
              <p class="hint">Skip cutlery to reduce waste.</p>
            </div>
            <div class="switch-wrap">
              <div class="form-check form-switch" style="margin:0;">
                <input id="cutlerySwitch" class="form-check-input" type="checkbox" <%= prefs?.cutlery ? 'checked' : '' %>>
              </div>
            </div>
          </div>
        </div>

        <div class="btn-area" style="justify-content:flex-start; gap:10px; padding-top:16px;">
          <button type="button" class="btn-back" id="clearCartBtn">Clear Cart</button>
          <a href="/menu" class="btn-back">Back to Menu</a>
        </div>
      </div>

      <!-- RIGHT COLUMN: summary -->
      <aside class="card-surface summary-card">
        <div class="summary-title">
        <h5 style="margin:0; font-weight:700;">Order Summary</h5>
          <span class="summary-pill"><%= cart.length %> Items</span>
        </div>
        <div style="margin:8px 0 10px; color:#6f5f4a; font-size:13px;">Almost there - check your order details.</div>
        <div class="summary-row small">
          <span>Items (<%= cart.length %>)</span>
          <span>$<%= Number(subtotal).toFixed(2) %></span>
        </div>
        <div class="summary-row small">
          <span>Selected for checkout</span>
          <span id="selectedCountText">0 item(s)</span>
        </div>
        <div class="summary-row small">
          <span>Cutlery</span>
          <span><%= prefs?.cutlery ? 'Included' : 'None' %></span>
        </div>
        <div class="summary-row small">
          <span>Points available</span>
          <span><%= Number(availablePoints || 0) %></span>
        </div>
        <div class="section-block" style="grid-template-columns:1fr auto; margin:12px 0;">
          <div>
            <p class="label" style="margin:0;">Redeem points</p>
            <p class="hint" style="margin:0;">1 point = $0.10 off. Max up to total.</p>
            <% if (appliedPoints > 0) { %>
              <p class="hint" style="margin:0;">Applied: <strong><%= appliedPoints %></strong> points ( -$<%= Number(redeem||0).toFixed(2) %> )</p>
            <% } %>
          </div>
          <form action="/cart/redeem" method="POST" class="d-flex gap-2 align-items-center">
            <input type="number" min="0" max="<%= Number(availablePoints||0) %>" name="points" class="form-control"
                   style="width:120px;" value="<%= appliedPoints || '' %>" placeholder="Pts">
            <button type="submit" class="btn-checkout" style="padding:8px 12px;">Apply</button>
          </form>
        </div>
        <hr style="border-color:rgba(0,0,0,0.08); margin:12px 0;">
        <% if (Number(redeem || 0) > 0) { %>
          <div class="summary-row small">
            <span>Points discount</span>
            <span>- $<%= Number(redeem).toFixed(2) %></span>
          </div>
        <% } %>
        <div class="summary-row" style="font-size:18px;">
          <span>Total</span>
          <span>$<%= Number(totalAfterRedeem || subtotal).toFixed(2) %></span>
        </div>
        <div class="btn-area" style="padding-top:18px;">
          <button type="button" class="btn-checkout" style="width:100%;" id="checkoutSelectedBtn">Checkout Selected</button>
        </div>
          <p class="summary-note">
            Secure checkout available via PayPal, PayLater, and card payment.
          </p>
      </aside>

    <% } %>

  </div>
</div>

<!-- Edit Modal (kept for manual edits) -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content" style="border-radius:14px;">
      <div class="modal-header">
        <h5 class="modal-title" style="font-weight:600;">Edit Item</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <div style="font-size:14px; margin-bottom:10px;">
          <strong id="modalItemName"></strong>
        </div>

        <div class="d-flex align-items-center gap-3">
          <button type="button" class="btn btn-outline-secondary" id="modalMinus">-</button>
          <input type="number" min="1" class="form-control" id="modalQty" style="max-width:110px;" />
          <button type="button" class="btn btn-outline-secondary" id="modalPlus">+</button>
        </div>

        <div class="mt-3">
          <button type="button" class="btn btn-outline-danger w-100" id="modalRemove">
            Remove Item
          </button>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn" style="background:#d09a2e; color:#fff; font-weight:600;" id="modalSave">
          Save
        </button>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  // Modal state
  let currentItemName = "";

  const editModal = document.getElementById("editModal");
  const modalItemName = document.getElementById("modalItemName");
  const modalQty = document.getElementById("modalQty");
  const modalMinus = document.getElementById("modalMinus");
  const modalPlus = document.getElementById("modalPlus");
  const modalSave = document.getElementById("modalSave");
  const modalRemove = document.getElementById("modalRemove");

  if (editModal) {
    editModal.addEventListener("show.bs.modal", function (event) {
      const trigger = event.relatedTarget;
      currentItemName = trigger.getAttribute("data-name");
      const qty = parseInt(trigger.getAttribute("data-qty")) || 1;

      modalItemName.textContent = currentItemName;
      modalQty.value = qty;
    });
  }

  function sendQuantityUpdate(name, qty){
    fetch("/cart/update", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ name, quantity: qty })
    })
    .then(res => res.json())
    .then(data => {
      if (data.ok) location.reload();
      else alert(data.error || "Failed to update item");
    })
    .catch(() => alert("Error updating item"));
  }

  if (modalMinus) {
    modalMinus.addEventListener("click", function(){
      let q = parseInt(modalQty.value) || 1;
      q = Math.max(1, q - 1);
      modalQty.value = q;
    });
  }

  if (modalPlus) {
    modalPlus.addEventListener("click", function(){
      let q = parseInt(modalQty.value) || 1;
      modalQty.value = q + 1;
    });
  }

  if (modalSave) {
    modalSave.addEventListener("click", function(){
      const q = parseInt(modalQty.value) || 1;
      sendQuantityUpdate(currentItemName, q);
    });
  }

  if (modalRemove) {
    modalRemove.addEventListener("click", function(){
      fetch("/cart/remove", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ name: currentItemName })
      })
      .then(res => res.json())
      .then(data => {
        if (data.ok) location.reload();
        else alert(data.error || "Failed to remove item");
      })
      .catch(() => alert("Error removing item"));
    });
  }

  // Inline quantity buttons
  document.querySelectorAll(".qty-btn").forEach(btn => {
    btn.addEventListener("click", () => {
      const name = btn.getAttribute("data-name");
      const dir = parseInt(btn.getAttribute("data-dir"), 10);
      const display = document.querySelector(`.qty-display[data-name="${name.replace(/"/g,'\\"')}"]`);
      const current = parseInt(display.textContent.replace('x','')) || 1;
      const next = Math.max(1, current + dir);
      sendQuantityUpdate(name, next);
    });
  });

  // Save preferences (cutlery only; fulfillment handled at checkout)
  const cutlerySwitch = document.getElementById("cutlerySwitch");

  function savePrefs(){
    const payload = {
      cutlery: cutlerySwitch ? cutlerySwitch.checked : false,
      pickupDate: "",
      pickupTime: ""
    };

    fetch("/cart/preferences", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload)
    }).catch(()=>{});
  }

  if (cutlerySwitch) cutlerySwitch.addEventListener("change", savePrefs);

  // Clear cart button
  const clearCartBtn = document.getElementById("clearCartBtn");
  if (clearCartBtn) {
    clearCartBtn.addEventListener("click", () => {
      if (!confirm("Clear all items from your cart?")) return;
      fetch("/cart/clear", { method: "POST" })
        .then(res => res.json())
        .then(data => {
          if (data.ok) location.reload();
          else alert("Failed to clear cart");
        })
        .catch(() => alert("Error clearing cart"));
    });
  }

  // Quick remove buttons on each row
  document.querySelectorAll(".quick-remove").forEach(btn => {
    btn.addEventListener("click", () => {
      const name = btn.getAttribute("data-name");
      fetch("/cart/remove", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ name })
      })
      .then(res => res.json())
      .then(data => {
        if (data.ok) location.reload();
        else alert(data.error || "Failed to remove item");
      })
      .catch(() => alert("Error removing item"));
    });
  });

  const selectAllCartItems = document.getElementById("selectAllCartItems");
  const itemSelectBoxes = Array.from(document.querySelectorAll(".item-select"));
  const selectedCountText = document.getElementById("selectedCountText");
  const checkoutSelectedBtn = document.getElementById("checkoutSelectedBtn");

  function getSelectedItemNames() {
    return itemSelectBoxes
      .filter(cb => cb.checked)
      .map(cb => cb.getAttribute("data-name"))
      .filter(Boolean);
  }

  function syncSelectionUI() {
    const selectedNames = getSelectedItemNames();
    const total = itemSelectBoxes.length;
    const selected = selectedNames.length;
    if (selectedCountText) selectedCountText.textContent = `${selected} item(s)`;
    if (selectAllCartItems) {
      selectAllCartItems.checked = total > 0 && selected === total;
      selectAllCartItems.indeterminate = selected > 0 && selected < total;
    }
  }

  if (selectAllCartItems) {
    selectAllCartItems.addEventListener("change", () => {
      itemSelectBoxes.forEach(cb => { cb.checked = selectAllCartItems.checked; });
      syncSelectionUI();
    });
  }

  itemSelectBoxes.forEach(cb => cb.addEventListener("change", syncSelectionUI));
  syncSelectionUI();

  if (checkoutSelectedBtn) {
    checkoutSelectedBtn.addEventListener("click", () => {
      const names = getSelectedItemNames();
      if (!names.length) {
        alert("Please select at least one item to checkout.");
        return;
      }

      fetch("/cart/selection", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ names })
      })
      .then(res => res.json())
      .then(data => {
        if (!data.ok) {
          alert(data.error || "Failed to save selection");
          return;
        }
        window.location.href = "/checkout";
      })
      .catch(() => alert("Error saving selected items"));
    });
  }
</script>

</body>
</html>




