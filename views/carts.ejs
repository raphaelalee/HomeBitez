<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Cart - HomeBitez</title>

<link href="https://fonts.googleapis.com/css2?family=Fraunces:wght@600;700;800&family=Manrope:wght@400;600;700&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
  body{
      margin:0;
      font-family:Arial, sans-serif;
      background:
        radial-gradient(circle at 8% 0%, #fff7ea 0%, #f7efe3 42%),
        linear-gradient(180deg, #f7efe3 0%, #f3e8d8 100%);
      color:#2f2419;
  }

  .cart-wrap{
      max-width: 1180px;
      margin: 0 auto;
      padding: 26px 20px 50px;
  }

  .cart-hero{
      margin-bottom: 16px;
      display:flex;
      justify-content:space-between;
      align-items:flex-end;
      gap: 14px;
      flex-wrap: wrap;
  }

  .hero-title{
      margin:0;
      font-size:30px;
      line-height:1.1;
      font-family:'Fraunces', "Times New Roman", serif;
      letter-spacing:0.2px;
  }

  .hero-sub{
      margin:6px 0 0;
      color:#6f5f4a;
      font-size:14px;
  }

  .stepper{
      display:flex;
      align-items:center;
      gap:8px;
  }

  .step{
      border-radius:999px;
      border:1px solid #dfc89f;
      background:#fff8ec;
      color:#76542d;
      padding:6px 10px;
      font-size:12px;
      font-weight:700;
      white-space:nowrap;
  }

  .step.active{
      background:#d09a2e;
      color:#fff;
      border-color:#d09a2e;
  }

  .cart-layout{
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 18px;
      align-items: start;
  }

  .card-surface{
      background: linear-gradient(145deg, #fffaf2 0%, #f3e4cf 100%);
      border:1px solid #ead7b7;
      border-radius: 14px;
      padding: 26px 24px;
      box-shadow: 0 10px 28px rgba(0,0,0,0.08);
  }

  .items-list{
      display: flex;
      flex-direction: column;
      gap: 12px;
  }

  /* ✅ Added per-item subtotal column */
  .cart-row{
      display: grid;
      grid-template-columns: 36px 78px 1fr 110px 110px 170px;
      gap: 14px;
      align-items: center;
      padding: 14px;
      border: 1px solid rgba(0,0,0,0.06);
      border-radius: 12px;
      background:#fff7ea;
      position: relative;
      transition: transform .14s ease, box-shadow .14s ease;
  }

  .cart-row:hover{
      transform: translateY(-1px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.07);
  }

  .item-img{
      width: 70px;
      height: 70px;
      border-radius: 12px;
      object-fit: cover;
      background: #fff;
      border: 1px solid rgba(0,0,0,0.08);
  }

  .item-name{
      font-size: 16px;
      font-weight: 600;
      margin: 0;
      line-height: 1.2;
      color:#2f2a24;
  }

  .row-select{
      display:flex;
      align-items:center;
      justify-content:center;
  }

  .row-select input{
      width:18px;
      height:18px;
      cursor:pointer;
      accent-color:#d09a2e;
  }

  .row-badge{
      display:inline-flex;
      align-items:center;
      justify-content:center;
      width:24px;
      height:24px;
      border-radius:50%;
      background:#fde6bd;
      color:#7c5618;
      font-size:12px;
      font-weight:700;
      margin-right:8px;
  }

  .item-sub{
      font-size: 13px;
      margin: 6px 0 0;
      color: #4b4b4b;
  }

  .edit-link{
      font-size: 12px;
      margin-left: 10px;
      text-decoration: none;
      color: #0b63d1;
      cursor: pointer;
      font-weight: 600;
  }
  .edit-link:hover{ text-decoration: underline; }

  .price-col{
      text-align: left;
      font-weight: 600;
      color:#2f2a24;
  }

  .unit-price{
      font-size: 13px;
      color:#6d6151;
      font-weight: 500;
  }

  .qty-col{
      display:flex;
      justify-content:flex-end;
      align-items:center;
      gap: 8px;
  }

  .qty-btn{
      width: 32px;
      height: 32px;
      border-radius: 50%;
      border: 1px solid rgba(0,0,0,0.15);
      background:#fff;
      font-weight: 600;
      line-height: 1;
      cursor: pointer;
      transition: all .12s ease;
  }

  .qty-btn:hover{
      background:#fff2d8;
      border-color:#d5a554;
  }

  .qty-btn:disabled{
      opacity:.6;
      cursor:not-allowed;
  }

  .qty-display{
      min-width: 32px;
      text-align: center;
      font-weight: 600;
  }

  .section-block{
      background:#fff7ea;
      border-radius: 12px;
      border:1px solid rgba(0,0,0,0.06);
      padding: 14px 16px;
      display:grid;
      grid-template-columns: 1fr auto;
      gap: 10px;
      align-items:center;
  }

  .label{
      font-size: 14px;
      font-weight: 600;
      color:#2f2a24;
      margin:0;
  }

  .hint{
      font-size: 12px;
      color:#6b5d4a;
      margin:0;
  }

  .summary-card{
      position: sticky;
      top: 90px;
      border: 1px solid #ead7b7;
      background: linear-gradient(180deg, #ffefd8 0%, #f6dfbf 100%);
  }

  .summary-title{
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap:8px;
  }

  .summary-pill{
      border-radius:999px;
      border:1px solid #dcb97b;
      padding:5px 9px;
      font-size:12px;
      font-weight:700;
      color:#7d571f;
      background:#fff5df;
  }

  .summary-row{
      display:flex;
      justify-content:space-between;
      align-items:center;
      margin: 8px 0;
      font-weight:600;
      color:#2f2a24;
  }

  .summary-row.small{
      font-weight:500;
      color:#5a5144;
  }

  .btn-back{
      padding: 12px 18px;
      border: 1px solid #d1b26f;
      background:#fffaf2;
      border-radius: 10px;
      font-weight: 600;
      text-decoration: none;
      color: #2f2419;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      transition: all .15s ease;
  }
  .btn-back:hover{ background:#fff3d6; }

  .btn-checkout{
      padding: 12px 18px;
      background:#d09a2e;
      color:#fffaf2;
      border-radius:10px;
      border:none;
      font-weight:600;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      transition: transform .12s ease, box-shadow .12s ease;
      box-shadow:0 8px 18px rgba(0,0,0,0.08);
  }

  .btn-checkout:hover{
      transform: translateY(-1px);
      box-shadow: 0 10px 22px rgba(0,0,0,0.12);
      color:#fffaf2;
  }

  .btn-checkout:disabled{
      opacity:.6;
      cursor:not-allowed;
      transform:none;
      box-shadow:none;
  }

  .quick-remove{
      position:absolute;
      top:10px;
      right:10px;
      border:none;
      background:transparent;
      color:#8d7a5a;
      font-size:13px;
      font-weight:700;
      cursor:pointer;
      padding:4px;
      border-radius:8px;
  }

  .quick-remove:hover{
      color:#b94f4f;
      background:#fff0f0;
  }

  .summary-note{
      margin-top:10px;
      font-size:12px;
      color:#6f5f4a;
      line-height:1.45;
  }

  .btn-area{
      display:flex;
      justify-content:flex-end;
      gap: 12px;
      padding-top: 14px;
      flex-wrap:wrap;
  }

  .empty{
      padding: 40px 0 10px;
      text-align:center;
      color:#333;
  }

  .switch-wrap{
      display:flex;
      align-items:center;
      justify-content:flex-end;
  }

  /* ✅ Toast */
  .toastx{
      position:fixed;
      bottom:18px;
      right:18px;
      z-index:9999;
      display:none;
      background:#2f2419;
      color:#fff;
      padding:10px 14px;
      border-radius:12px;
      box-shadow: 0 10px 24px rgba(0,0,0,0.18);
      font-size:13px;
      max-width: 320px;
  }

  @media (max-width: 980px){
      .cart-layout{
          grid-template-columns: 1fr;
      }
      .summary-card{
          position: static;
      }
  }

  @media (max-width: 640px){
      .cart-hero{
          align-items:flex-start;
      }

      .hero-title{
          font-size:24px;
      }

      .cart-row{
          grid-template-columns: 34px 70px 1fr;
          grid-template-rows: auto auto auto;
          gap: 10px;
      }
      .price-col, .qty-col{
          justify-content:flex-start;
          text-align:left;
      }
  }
</style>
</head>

<body>

<%- include('partials/navbar-user') %>

<div class="cart-wrap">
  <div class="cart-hero">
    <div>
      <h1 class="hero-title">Your Cart</h1>
      <p class="hero-sub">Review items, update quantities, and head to checkout when ready.</p>
    </div>
    <div class="stepper">
      <span class="step active">1. Cart</span>
      <span class="step">2. Checkout</span>
      <span class="step">3. Payment</span>
    </div>
  </div>

  <div class="cart-layout">

    <% if (!cart || cart.length === 0) { %>
      <div class="card-surface" style="grid-column:1 / -1;">
        <div class="empty">
          <h5 style="margin-bottom:10px; font-weight:600;">Your cart is empty</h5>
          <p style="margin:0;">Go to the menu and add some items :)</p>

          <div class="btn-area" style="justify-content:center;">
            <a href="/menu" class="btn-back">Back to Menu</a>
          </div>
        </div>
      </div>
    <% } else { %>

      <!-- LEFT COLUMN -->
      <div class="card-surface">
        <p style="margin:0 0 14px; color:#6f5f4a; font-size:13px;">
          <span id="itemTypesCount"><%= cart.length %></span> item type(s) in your cart
        </p>

        <div class="items-list">
          <div class="section-block" style="grid-template-columns: 1fr auto; margin-bottom: 2px;">
            <div>
              <p class="label">Select Items For Checkout</p>
              <p class="hint">Only checked items will be sent to checkout.</p>
            </div>
            <label class="d-flex align-items-center gap-2" style="margin:0; font-size:13px; color:#4d4337;">
              <input type="checkbox" id="selectAllCartItems" style="width:18px; height:18px; accent-color:#d09a2e;">
              Select all
            </label>
          </div>

          <% cart.forEach((item, i) => {
              const id = item.name;
              const price = Number(item.price) || 0;
              const qty = Number(item.quantity) || 1;
              const lineTotal = price * qty;
          %>
              <div class="cart-row"
                  data-id="<%= item.name %>"
                  data-price="<%= price.toFixed(2) %>"
                  data-name="<%= item.name %>">

              <div class="row-select">
                <input
                  class="item-select"
                  type="checkbox"
                  data-name="<%= item.name %>"
                  <%= (Array.isArray(checkoutSelection) && checkoutSelection.length)
                        ? (checkoutSelection.includes(String(item.name)) ? 'checked' : '')
                        : 'checked' %>>
              </div>

              <div>
                <img class="item-img"
                     src="<%= (item.image && item.image.trim() !== '') ? item.image : '/images/flatlay-iron-skillet-with-meat-and-other-food.jpg' %>"
                     alt="<%= item.name %>">
              </div>

              <div>
                <p class="item-name">
                  <span class="row-badge"><%= i + 1 %></span><%= item.name %>
                  <a class="edit-link"
                     data-bs-toggle="modal"
                     data-bs-target="#editModal"
                     data-id="<%= id %>"
                     data-name="<%= item.name %>"
                     data-qty="<%= qty %>">
                     Edit
                  </a>
                </p>

                <% if (item.notes) { %>
                  <p class="item-sub">• <%= item.notes %></p>
                <% } %>
              </div>

              <div class="price-col">
                <div class="unit-price">Unit</div>
                $<%= price.toFixed(2) %>
              </div>

              <div class="price-col">
                <div class="unit-price">Total</div>
                $<span class="line-total" data-id="<%= id %>"><%= lineTotal.toFixed(2) %></span>
              </div>

              <div class="qty-col">
                <button class="qty-btn" data-dir="-1" data-id="<%= id %>">-</button>
                <div class="qty-display" data-id="<%= id %>">x<%= qty %></div>
                <button class="qty-btn" data-dir="1" data-id="<%= id %>">+</button>
              </div>
            </div>
          <% }) %>
        </div>

        <div style="margin-top:18px; display:flex; flex-direction:column; gap:10px;">
          <div class="section-block">
            <div>
              <p class="label">Cutlery</p>
              <p class="hint">Skip cutlery to reduce waste.</p>
            </div>
            <div class="switch-wrap">
              <div class="form-check form-switch" style="margin:0;">
                <input id="cutlerySwitch" class="form-check-input" type="checkbox" <%= prefs?.cutlery ? 'checked' : '' %>>
              </div>
            </div>
          </div>
        </div>

        <div class="btn-area" style="justify-content:flex-start; gap:10px; padding-top:16px;">
          <button type="button" class="btn-back" id="clearCartBtn">Clear Cart</button>
          <a href="/menu" class="btn-back">Back to Menu</a>
        </div>
      </div>

      <!-- RIGHT COLUMN -->
      <aside class="card-surface summary-card">
        <div class="summary-title">
          <h5 style="margin:0; font-weight:700;">Order Summary</h5>
          <span class="summary-pill"><span id="summaryItemTypes"><%= cart.length %></span> Items</span>
        </div>

        <div style="margin:8px 0 10px; color:#6f5f4a; font-size:13px;">
          Almost there - check your order details.
        </div>

        <div class="summary-row small">
          <span>Items (<span id="summaryItemsCount"><%= cart.length %></span>)</span>
          <span>$<span id="summarySubtotal"><%= Number(subtotal).toFixed(2) %></span></span>
        </div>

        <div class="summary-row small">
          <span>Selected for checkout</span>
          <span id="selectedCountText">0 item(s)</span>
        </div>

        <div class="summary-row small">
          <span>Selected subtotal</span>
          <span>$<span id="selectedSubtotalText">0.00</span></span>
        </div>

        <div class="summary-row small">
          <span>Cutlery</span>
          <span id="cutleryText"><%= prefs?.cutlery ? 'Included' : 'None' %></span>
        </div>

        <div class="summary-row small">
          <span>Points available</span>
          <span><%= Number(availablePoints || 0) %></span>
        </div>

        <div class="section-block" style="grid-template-columns:1fr auto; margin:12px 0;">
          <div>
            <p class="label" style="margin:0;">Redeem points</p>
            <p class="hint" style="margin:0;">1 point = $0.10 off. Max up to total.</p>
            <% if (appliedPoints > 0) { %>
              <p class="hint" style="margin:0;">Applied: <strong><%= appliedPoints %></strong> points ( -$<%= Number(redeem||0).toFixed(2) %> )</p>
            <% } %>
          </div>
          <form action="/cart/redeem" method="POST" class="d-flex gap-2 align-items-center">
            <input type="number" min="0" max="<%= Number(availablePoints||0) %>" name="points" class="form-control"
                   style="width:120px;" value="<%= appliedPoints || '' %>" placeholder="Pts">
            <button type="submit" class="btn-checkout" style="padding:8px 12px;">Apply</button>
          </form>
        </div>

        <hr style="border-color:rgba(0,0,0,0.08); margin:12px 0;">

        <% if (Number(redeem || 0) > 0) { %>
          <div class="summary-row small">
            <span>Points discount</span>
            <span>- $<span id="redeemAmount"><%= Number(redeem).toFixed(2) %></span></span>
          </div>
        <% } else { %>
          <span id="redeemAmount" style="display:none;">0.00</span>
        <% } %>

        <div class="summary-row" style="font-size:18px;">
          <span>Total</span>
          <span>$<span id="summaryTotal"><%= Number(totalAfterRedeem || subtotal).toFixed(2) %></span></span>
        </div>

        <div class="btn-area" style="padding-top:18px;">
          <button type="button" class="btn-checkout" style="width:100%;" id="checkoutSelectedBtn">Checkout Selected</button>
        </div>

        <p class="summary-note">
          Secure checkout available via PayPal, NETS, PayLater, and card payment.
        </p>
      </aside>

    <% } %>

  </div>
</div>

<!-- Toast -->
<div class="toastx" id="toastx"></div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content" style="border-radius:14px;">
      <div class="modal-header">
        <h5 class="modal-title" style="font-weight:600;">Edit Item</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <div style="font-size:14px; margin-bottom:10px;">
          <strong id="modalItemName"></strong>
        </div>

        <div class="d-flex align-items-center gap-3">
          <button type="button" class="btn btn-outline-secondary" id="modalMinus">-</button>
          <input type="number" min="1" class="form-control" id="modalQty" style="max-width:110px;" />
          <button type="button" class="btn btn-outline-secondary" id="modalPlus">+</button>
        </div>

        <div class="mt-3">
          <button type="button" class="btn btn-outline-danger w-100" id="modalRemove">
            Remove Item
          </button>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn" style="background:#d09a2e; color:#fff; font-weight:600;" id="modalSave">
          Save
        </button>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  function showToast(msg){
    const el = document.getElementById("toastx");
    if (!el) return;
    el.textContent = msg;
    el.style.display = "block";
    clearTimeout(window.__toastTimer);
    window.__toastTimer = setTimeout(() => { el.style.display = "none"; }, 1600);
  }

  function money(n){
    const x = Number(n || 0);
    return x.toFixed(2);
  }

  function getQty(id){
    const el = document.querySelector('.qty-display[data-id="' + CSS.escape(String(id)) + '"]');
    if (!el) return 1;
    const q = parseInt(String(el.textContent).replace("x","").trim(), 10);
    return isNaN(q) ? 1 : q;
  }

  function setQtyAndLineTotal(id, qty){
    const qtyEl = document.querySelector('.qty-display[data-id="' + CSS.escape(String(id)) + '"]');
    if (qtyEl) qtyEl.textContent = "x" + qty;

    const row = document.querySelector('.cart-row[data-id="' + CSS.escape(String(id)) + '"]');
    if (row){
      const price = Number(row.getAttribute("data-price") || 0);
      const lineEl = document.querySelector('.line-total[data-id="' + CSS.escape(String(id)) + '"]');
      if (lineEl) lineEl.textContent = money(price * qty);
    }
  }

  function getSelectedNames(){
    return Array.from(document.querySelectorAll(".item-select"))
      .filter(cb => cb.checked)
      .map(cb => cb.getAttribute("data-name"))
      .filter(Boolean)
      .map(String);
  }


  function recomputeSelectedSubtotal(){
    const selected = new Set(getSelectedNames().map(String));
    let subtotal = 0;

    document.querySelectorAll(".cart-row").forEach(row => {
      const name = row.getAttribute("data-name");
      const price = Number(row.getAttribute("data-price") || 0);
      const qty = getQty(row.getAttribute("data-id")); // row data-id is item.name in your EJS

      if (selected.has(String(name))) subtotal += (price * qty);
    });

    return subtotal;
  }

  function recomputeSelectedSubtotal(){
    const selected = new Set(getSelectedIds().map(String));
    let subtotal = 0;
    document.querySelectorAll(".cart-row").forEach(row => {
      const id = row.getAttribute("data-id");
      const price = Number(row.getAttribute("data-price") || 0);
      const qty = getQty(id);
      if (selected.has(String(id))) subtotal += (price * qty);
    });
    return subtotal;
  }

  function syncSelectionUI(){
    const selectAll = document.getElementById("selectAllCartItems");
    const checkboxes = Array.from(document.querySelectorAll(".item-select"));
    const selectedIds = getSelectedNames
    const total = checkboxes.length;
    const selectedCount = selectedIds.length;

    const selectedCountText = document.getElementById("selectedCountText");
    const selectedSubtotalText = document.getElementById("selectedSubtotalText");
    const checkoutBtn = document.getElementById("checkoutSelectedBtn");

    if (selectedCountText) selectedCountText.textContent = selectedCount + " item(s)";

    const selectedSubtotal = recomputeSelectedSubtotal();
    if (selectedSubtotalText) selectedSubtotalText.textContent = money(selectedSubtotal);

    if (selectAll){
      selectAll.checked = total > 0 && selectedCount === total;
      selectAll.indeterminate = selectedCount > 0 && selectedCount < total;
    }

    if (checkoutBtn){
      checkoutBtn.disabled = selectedCount === 0;
    }
  }

  function syncTotalsUI(){
    const summarySubtotalEl = document.getElementById("summarySubtotal");
    const summaryTotalEl = document.getElementById("summaryTotal");
    const redeemEl = document.getElementById("redeemAmount");

    const newSubtotal = recomputeCartSubtotal();
    const redeem = Number(redeemEl ? redeemEl.textContent : 0) || 0;
    const newTotal = Math.max(0, newSubtotal - redeem);

    if (summarySubtotalEl) summarySubtotalEl.textContent = money(newSubtotal);
    if (summaryTotalEl) summaryTotalEl.textContent = money(newTotal);
  }

  async function postJSON(url, payload){
    const res = await fetch(url, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload || {})
    });
    const data = await res.json().catch(() => ({}));
    return data;
  }

  // ✅ Update qty (no reload)
  async function updateQty(id, qty){
    const row = document.querySelector('.cart-row[data-id="' + CSS.escape(String(id)) + '"]');
    const name = row ? row.getAttribute("data-name") : "";

    // Send id (primary). Also send name as fallback for older backend.
    const data = await postJSON("/cart/update", { id: Number(id), quantity: Number(qty), name: name });
    return data;
  }

  // ✅ Remove (no reload)
  async function removeItem(id){
    const row = document.querySelector('.cart-row[data-id="' + CSS.escape(String(id)) + '"]');
    const name = row ? row.getAttribute("data-name") : "";
    const data = await postJSON("/cart/remove", { id: Number(id), name: name });
    return data;
  }

  // Qty buttons
  document.querySelectorAll(".qty-btn").forEach(btn => {
    btn.addEventListener("click", async () => {
      if (btn.disabled) return;
      btn.disabled = true;

      const id = btn.getAttribute("data-id");
      const dir = parseInt(btn.getAttribute("data-dir"), 10);
      const current = getQty(id);
      const next = Math.max(1, current + dir);

      const data = await updateQty(id, next);
      if (data && data.ok){
        setQtyAndLineTotal(id, next);
        syncTotalsUI();
        syncSelectionUI();
        showToast("Quantity updated");
      } else {
        showToast((data && data.error) ? data.error : "Failed to update item");
      }

      btn.disabled = false;
    });
  });

  // Quick remove
  document.querySelectorAll(".quick-remove").forEach(btn => {
    btn.addEventListener("click", async () => {
      const id = btn.getAttribute("data-id");
      const row = document.querySelector('.cart-row[data-id="' + CSS.escape(String(id)) + '"]');

      const data = await removeItem(id);
      if (data && data.ok){
        if (row) row.remove();
        showToast("Item removed");

        // update counts
        const count = document.querySelectorAll(".cart-row").length;
        const itemTypesCount = document.getElementById("itemTypesCount");
        const summaryItemTypes = document.getElementById("summaryItemTypes");
        const summaryItemsCount = document.getElementById("summaryItemsCount");
        if (itemTypesCount) itemTypesCount.textContent = String(count);
        if (summaryItemTypes) summaryItemTypes.textContent = String(count);
        if (summaryItemsCount) summaryItemsCount.textContent = String(count);

        syncTotalsUI();
        syncSelectionUI();

        if (count === 0) window.location.reload(); // show empty state nicely
      } else {
        showToast((data && data.error) ? data.error : "Failed to remove item");
      }
    });
  });

  // Select all checkbox
  const selectAllCartItems = document.getElementById("selectAllCartItems");
  if (selectAllCartItems){
    selectAllCartItems.addEventListener("change", () => {
      const boxes = Array.from(document.querySelectorAll(".item-select"));
      boxes.forEach(cb => { cb.checked = selectAllCartItems.checked; });
      syncSelectionUI();
    });
  }

  // Individual selection
  document.querySelectorAll(".item-select").forEach(cb => {
    cb.addEventListener("change", syncSelectionUI);
  });

  // Save preferences (cutlery)
  const cutlerySwitch = document.getElementById("cutlerySwitch");
  const cutleryText = document.getElementById("cutleryText");

  function savePrefs(){
    const payload = {
      cutlery: cutlerySwitch ? cutlerySwitch.checked : false,
      pickupDate: "",
      pickupTime: ""
    };

    fetch("/cart/preferences", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload)
    }).catch(()=>{});
  }

  if (cutlerySwitch){
    cutlerySwitch.addEventListener("change", () => {
      if (cutleryText) cutleryText.textContent = cutlerySwitch.checked ? "Included" : "None";
      showToast("Preference saved");
      savePrefs();
    });
  }

  // Clear cart
  const clearCartBtn = document.getElementById("clearCartBtn");
  if (clearCartBtn) {
    clearCartBtn.addEventListener("click", () => {
      if (!confirm("Clear all items from your cart?")) return;
      fetch("/cart/clear", { method: "POST" })
        .then(res => res.json())
        .then(data => {
          if (data.ok){
            showToast("Cart cleared");
            window.location.reload();
          } else {
            showToast("Failed to clear cart");
          }
        })
        .catch(() => showToast("Error clearing cart"));
    });
  }

  // Modal state
  let currentItemId = null;
  let currentItemName = "";

  const editModal = document.getElementById("editModal");
  const modalItemName = document.getElementById("modalItemName");
  const modalQty = document.getElementById("modalQty");
  const modalMinus = document.getElementById("modalMinus");
  const modalPlus = document.getElementById("modalPlus");
  const modalSave = document.getElementById("modalSave");
  const modalRemove = document.getElementById("modalRemove");

  if (editModal) {
    editModal.addEventListener("show.bs.modal", function (event) {
      const trigger = event.relatedTarget;
      currentItemId = trigger.getAttribute("data-id");
      currentItemName = trigger.getAttribute("data-name") || "";
      const qty = parseInt(trigger.getAttribute("data-qty"), 10) || 1;

      modalItemName.textContent = currentItemName;
      modalQty.value = qty;
    });
  }

  if (modalMinus) {
    modalMinus.addEventListener("click", function(){
      let q = parseInt(modalQty.value, 10) || 1;
      q = Math.max(1, q - 1);
      modalQty.value = q;
    });
  }

  if (modalPlus) {
    modalPlus.addEventListener("click", function(){
      let q = parseInt(modalQty.value, 10) || 1;
      modalQty.value = q + 1;
    });
  }

  if (modalSave) {
    modalSave.addEventListener("click", async function(){
      const q = parseInt(modalQty.value, 10) || 1;
      const data = await updateQty(currentItemId, q);
      if (data && data.ok){
        setQtyAndLineTotal(currentItemId, q);
        syncTotalsUI();
        syncSelectionUI();
        showToast("Updated");
        const inst = bootstrap.Modal.getInstance(editModal);
        if (inst) inst.hide();
      } else {
        showToast((data && data.error) ? data.error : "Failed to update item");
      }
    });
  }

  if (modalRemove) {
    modalRemove.addEventListener("click", async function(){
      const data = await removeItem(currentItemId);
      if (data && data.ok){
        const row = document.querySelector('.cart-row[data-id="' + CSS.escape(String(currentItemId)) + '"]');
        if (row) row.remove();
        syncTotalsUI();
        syncSelectionUI();
        showToast("Removed");
        const inst = bootstrap.Modal.getInstance(editModal);
        if (inst) inst.hide();
      } else {
        showToast((data && data.error) ? data.error : "Failed to remove item");
      }
    });
  }

// Checkout Selected -> store selection -> redirect
const checkoutSelectedBtn = document.getElementById("checkoutSelectedBtn");

if (checkoutSelectedBtn) {
  checkoutSelectedBtn.addEventListener("click", async () => {
    const names = getSelectedNames();

    if (!names.length) {
      showToast("Please select at least one item to checkout.");
      return;
    }

    const data = await postJSON("/cart/selection", { names: names });

    if (!data.ok) {
      showToast(data.error || "Failed to save selection");
      return;
    }

    window.location.href = "/checkout";
  });
}


  // Initial sync
  syncTotalsUI();
  syncSelectionUI();
</script>

