<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Customer Messages - HomeBitez</title>

    <!-- Bootstrap & Icons (optional if navbar uses Bootstrap icons) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: "Poppins", Arial, sans-serif;
            background: #faf7f2;
        }

        /* PAGE TITLE */
        .page-title {
            margin: 30px auto 20px;
            font-size: 22px;
            color: #444;
            font-weight: 600;
            text-align: center;
            max-width: 1100px;
        }

        .message-list {
            max-width: 1100px;
            margin: 0 auto 40px;
            padding: 0 18px;
            display: grid;
            gap: 14px;
        }

        /* MESSAGE CARD */
        .message-card {
            background: #fff;
            padding: 16px 18px;
            border-radius: 14px;
            box-shadow: 0 6px 18px rgba(0,0,0,0.06);
            border: 1px solid #f0e4d4;
            display: grid;
            grid-template-columns: 1fr;
            gap: 8px;
        }

        .message-header{
            display:flex;
            justify-content:space-between;
            align-items:flex-start;
            gap:10px;
            flex-wrap:wrap;
        }

        .sender {
            font-weight: 700;
            color: #2d2a26;
            display:flex;
            gap:8px;
            align-items:center;
        }

        .email-pill{
            background:#fff6d7;
            color:#8b6a00;
            border-radius:999px;
            padding:4px 10px;
            font-size:12px;
            border:1px solid #f1dfbb;
        }

        .date {
            font-size: 12px;
            color: #777;
        }

        .message-text {
            margin-top: 2px;
            font-size: 15px;
            color: #555;
            line-height:1.5;
        }

        .meta-row{
            display:flex;
            justify-content:space-between;
            align-items:center;
            gap:10px;
            flex-wrap:wrap;
        }

        .tag{
            font-size:11px;
            color:#6b6b6b;
        }

        .copy-btn{
            border:none;
            background:transparent;
            color:#dd9b00;
            cursor:pointer;
            font-weight:700;
            display:flex;
            align-items:center;
            gap:6px;
        }

        .empty-state{
            margin: 40px auto;
            font-size: 16px;
            color: #777;
            max-width: 900px;
            text-align:center;
        }

        @media (max-width: 768px) {
            .message-card{padding:14px;}
        }
    </style>
</head>

<body>

  <!-- INCLUDE BIZOWNER NAVBAR -->
  <%- include('../partials/navbar-bizowner') %>

  <% if (typeof success !== 'undefined' && success && success.length) { %>
    <div class="alert alert-success text-center m-3"><%= success %></div>
  <% } %>
  <% if (typeof error !== 'undefined' && error && error.length) { %>
    <div class="alert alert-danger text-center m-3"><%= error %></div>
  <% } %>

  <!-- PAGE TITLE -->
  <div class="page-title">Customer Messages</div>

  <!-- NO MESSAGES -->
  <% if (messages.length === 0) { %>
    <div class="empty-state">No customer messages yet.</div>
  <% } %>

  <!-- MESSAGES -->
  <div class="message-list">
    <% messages.forEach(m => { %>
      <div class="message-card">
        <div class="message-header">
          <div class="sender">
            <i class="bi bi-person-circle" style="color:#dd9b00;"></i>
            <span><%= m.senderName %></span>
            <% if (m.senderEmail) { %>
              <span class="email-pill"><%= m.senderEmail %></span>
            <% } %>
          </div>
          <div class="date"><%= m.created_at.toLocaleString() %></div>
        </div>
        <div class="message-text"><%= m.message %></div>
        <div class="meta-row">
          <span class="tag">Status: <%= m.isRead ? 'read' : 'unread' %></span>
          <div style="display:flex; gap:10px; flex-wrap:wrap;">
            <form action="/bizowner/messages/reply" method="POST" class="d-flex" style="gap:6px; align-items:center;">
              <input type="hidden" name="messageId" value="<%= m.id %>">
              <input name="reply" class="form-control form-control-sm" placeholder="Quick reply" required style="min-width:180px;">
              <button class="btn btn-sm btn-warning text-white" type="submit">Send</button>
            </form>
            <button class="copy-btn" onclick="navigator.clipboard.writeText(`<%= m.message.replace(/`/g,'\\`') %>`); this.textContent='Copied'; setTimeout(()=>this.textContent='Copy text',1200);">
              <i class="bi bi-clipboard"></i> Copy text
            </button>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

</body>
</html>
