<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Add Product</title>

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: "Poppins", Arial, sans-serif;
            background: #faf7f2;
        }

        /* NAVBAR */
        .navbar {
            background: white;
            padding: 18px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #eee;
        }

        .logo {
            font-size: 26px;
            font-weight: 700;
            color: #f4b400;
        }

        /* PAGE TITLE */
        .page-title {
            margin: 30px 40px 10px;
            font-size: 26px;
            font-weight: 600;
            color: #444;
        }

        /* FORM CONTAINER */
        .container {
            background: white;
            padding: 35px;
            width: 520px;
            margin: 25px auto;
            border-radius: 18px;
            box-shadow: 0px 4px 16px rgba(0, 0, 0, 0.10);
        }

        label {
            font-weight: 600;
            margin-top: 12px;
            display: block;
            font-size: 14px;
            color: #555;
        }

        input[type="text"],
        input[type="number"],
        input[type="file"] {
            width: 100%;
            padding: 12px;
            margin-top: 6px;
            border-radius: 10px;
            border: 1px solid #ccc;
            font-size: 14px;
            background: #fafafa;
        }

        input[type="file"] {
            padding: 10px;
            border: 1px dashed #bbb;
            background: #fffdf5;
        }

        input[type="file"]:hover {
            border-color: #f4b400;
        }

        /* PREVIEW */
        .image-preview {
            margin-top: 15px;
            width: 100%;
            height: 220px;
            object-fit: cover;
            border-radius: 14px;
            border: 1px solid #ddd;
            display: none;
        }

        button {
            padding: 14px;
            width: 100%;
            background: #f4b400;
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 20px;
        }

        button:hover {
            background: #d99a00;
        }

        .back {
            text-decoration: none;
            display: block;
            margin-bottom: 20px;
            color: #444;
            font-size: 14px;
            font-weight: 500;
        }
    </style>
</head>

<body>

    <!-- NAVIGATION BAR -->
    <div class="navbar">
        <div class="logo">HomeBitez</div>
    </div>

    <div class="page-title">Add New Product</div>

    <div class="container">

        <a class="back" href="/bizowner/inventory">‚Üê Back to Inventory</a>

        <form action="/bizowner/add" method="POST" enctype="multipart/form-data">

            <label>Product Name</label>
            <input type="text" name="productName" required>

            <label>Quantity</label>
            <input type="number" name="quantity" required>

            <label>Price (S$)</label>
            <input type="number" step="0.01" name="price" required>

            <label>Product Image</label>
            <input type="file" name="imageFile" accept="image/*" onchange="showPreview(event)" required>

            <!-- LIVE IMAGE PREVIEW -->
            <img id="preview" class="image-preview">

            <button type="submit">Add Product</button>
        </form>

    </div>

    <script>
        function showPreview(event) {
            const preview = document.getElementById("preview");
            preview.src = URL.createObjectURL(event.target.files[0]);
            preview.style.display = "block";
        }
    </script>

</body>

</html>