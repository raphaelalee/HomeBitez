<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head', { title: 'Inventory - HomeBitez' }) %>

  <style>
    /* Keep your styles here for now. Later move to /css/theme.css */
    body {
      margin: 0;
      padding: 0;
      font-family: "Poppins", sans-serif;
    }

    /* HERO HEADER (beige, less highlighter-yellow) */
    .hero {
      background: linear-gradient(135deg, #f1dfc7, #f6efe6);
      padding: 50px 50px 80px;
      border-radius: 0 0 35px 35px;
      color: #2a241e;
      border-bottom: 1px solid #eadac6;
    }

    .hero-title {
      font-size: 38px;
      font-weight: 800;
      letter-spacing: -0.02em;
    }

    .hero-sub {
      margin-top: 8px;
      font-size: 15px;
      color: rgba(42,36,30,0.75);
    }

    .hero-buttons {
      margin-top: 20px;
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
    }

    .hero-btn {
      padding: 12px 22px;
      border: none;
      border-radius: 999px;
      font-size: 14px;
      font-weight: 700;
      cursor: pointer;
      transition: .2s;
      text-decoration: none;
      display: inline-block;
    }

    .add-product-btn {
      background: #d59b2d;
      color: #fff;
      box-shadow: 0 10px 24px rgba(213, 155, 45, 0.25);
    }

    .add-product-btn:hover {
      background: #b97d18;
      transform: translateY(-1px);
    }

    .ghost-btn {
      background: rgba(255,255,255,0.6);
      color: #2a241e;
      border: 1px solid #eadac6;
    }
    .ghost-btn:hover {
      background: rgba(255,255,255,0.85);
    }

    /* STATS */
    .stats-row {
      display: flex;
      gap: 20px;
      margin-top: 35px;
      flex-wrap: wrap;
    }

    .stat-box {
      background: rgba(255, 255, 255, 0.65);
      border: 1px solid #eadac6;
      padding: 16px 22px;
      border-radius: 18px;
      width: 190px;
      color: #2a241e;
      box-shadow: 0 10px 24px rgba(42, 36, 30, 0.08);
    }

    .stat-number {
      font-size: 26px;
      font-weight: 800;
    }

    .stat-label {
      color: rgba(42,36,30,0.7);
      font-size: 13px;
      margin-top: 2px;
    }

    /* CONTENT WRAPPER */
    .content {
      background: #fffaf3;
      margin: -40px auto 40px;
      padding: 35px;
      width: 92%;
      border-radius: 22px;
      border: 1px solid #eadac6;
      box-shadow: 0 12px 30px rgba(42, 36, 30, 0.10);
    }

    .section-title {
      font-size: 22px;
      font-weight: 800;
      margin-bottom: 18px;
      color: #2a241e;
    }

    /* SEARCH / SORT */
    .top-controls {
      display: flex;
      justify-content: space-between;
      gap: 15px;
      margin-bottom: 25px;
      flex-wrap: wrap;
    }

    .search-box {
      display: flex;
      flex: 1;
      gap: 10px;
      min-width: 260px;
    }

    .search-input {
      flex: 1;
      padding: 12px 14px;
      border-radius: 999px;
      border: 1px solid #eadac6;
      background: #fff;
      outline: none;
    }

    .search-btn {
      padding: 12px 18px;
      background: #d59b2d;
      border: none;
      border-radius: 999px;
      color: white;
      font-weight: 800;
      cursor: pointer;
    }

    .sort-select {
      padding: 12px 14px;
      border-radius: 999px;
      border: 1px solid #eadac6;
      font-size: 14px;
      background: #fff;
    }

    /* PRODUCT GRID */
    .product-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      gap: 28px;
    }

    .product-card {
      background: #fff;
      padding: 18px;
      border-radius: 22px;
      border: 1px solid #eadac6;
      box-shadow: 0 10px 26px rgba(42, 36, 30, 0.08);
      transition: 0.2s;
      position: relative;
    }

    .product-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 14px 34px rgba(42, 36, 30, 0.12);
    }

    .product-img {
      width: 100%;
      height: 150px;
      object-fit: cover;
      border-radius: 16px;
      margin-bottom: 10px;
    }

    .product-name {
      font-size: 17px;
      font-weight: 800;
      color: #2a241e;
    }

    .product-price {
      color: #2a241e;
      font-weight: 800;
      margin-bottom: 6px;
    }

    .meta {
      color: rgba(42,36,30,0.7);
      font-size: 12px;
      margin-bottom: 10px;
      line-height: 1.35;
    }

    /* ACTION ICONS (nicer hover + consistent) */
    .icon-actions {
      position: absolute;
      top: 12px;
      right: 12px;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .icon-btn {
      width: 40px;
      height: 40px;
      background: #fffaf3;
      border-radius: 999px;
      border: 1px solid #eadac6;
      box-shadow: 0 8px 18px rgba(42, 36, 30, 0.12);
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: .15s ease;
      padding: 0;
      text-decoration: none;
    }

    .icon-btn:hover {
      transform: translateY(-1px) scale(1.05);
      background: #fff;
    }

    .edit-btn svg { stroke: #1f7a4a; stroke-width: 2; }
    .delete-btn svg { stroke: #b42318; stroke-width: 2; }

    /* REPLENISH */
    .replenish-row {
      display: flex;
      gap: 10px;
    }

    .replenish-input {
      flex: 1;
      padding: 10px 12px;
      border-radius: 999px;
      border: 1px solid #eadac6;
      outline: none;
    }

    .replenish-btn {
      background: #2a241e;
      border: none;
      padding: 10px 14px;
      border-radius: 999px;
      color: white;
      font-weight: 800;
      cursor: pointer;
    }

    /* TOAST (flash message) */
    .toast {
      position: fixed;
      top: 88px;
      right: 24px;
      z-index: 9999;
      padding: 12px 16px;
      border-radius: 14px;
      font-weight: 800;
      border: 1px solid #eadac6;
      background: #fffaf3;
      box-shadow: 0 12px 30px rgba(42, 36, 30, 0.18);
      animation: popIn .18s ease-out;
    }

    .toast-success { color: #1f7a4a; }
    .toast-error { color: #b42318; }

    @keyframes popIn {
      from { transform: translateY(-6px); opacity: 0; }
      to   { transform: translateY(0); opacity: 1; }
    }
  </style>
</head>

<body>
  <%- include('../partials/navbar') %>

  <% if (success && success.length) { %>
    <div class="toast toast-success"><%= success[0] %></div>
  <% } %>

  <% if (error && error.length) { %>
    <div class="toast toast-error"><%= error[0] %></div>
  <% } %>

  <!-- HERO HEADER -->
  <div class="hero">
    <div class="hero-title">Keep your catalogue looking sharp</div>
    <div class="hero-sub">Review, adjust, and launch products easily.</div>

    <div class="hero-buttons">
      <a href="/bizowner/add" class="hero-btn add-product-btn">+ Add Product</a>
      <a href="/menu" class="hero-btn ghost-btn">View Storefront</a>
    </div>

    <div class="stats-row">
      <div class="stat-box">
        <div class="stat-number"><%= products.length %></div>
        <div class="stat-label">Active Listings</div>
      </div>

      <div class="stat-box">
        <div class="stat-number"><%= products.reduce((a,b)=>a + Number(b.quantity || 0), 0) %></div>
        <div class="stat-label">Total Stock</div>
      </div>

      <div class="stat-box">
        <div class="stat-number">
          $<%= products.length ? (products.reduce((a,b)=>a + Number(b.price || 0), 0) / products.length).toFixed(2) : "0.00" %>
        </div>
        <div class="stat-label">Avg. Price</div>
      </div>
    </div>
  </div>

  <!-- CONTENT -->
  <div class="content">
    <div class="section-title">Manage Listings</div>

    <div class="top-controls">
      <div class="search-box">
        <input id="search" class="search-input" placeholder="Search products...">
        <button class="search-btn" type="button">Search</button>
      </div>

      <select class="sort-select">
        <option>Newest first</option>
        <option>Oldest first</option>
        <option>Price: Low → High</option>
        <option>Price: High → Low</option>
      </select>
    </div>

    <div class="product-grid">
      <% products.forEach(p => { %>
        <div class="product-card" data-name="<%= String(p.productName || '').toLowerCase() %>">
          <div class="icon-actions">
            <!-- EDIT -->
            <a href="/bizowner/edit/<%= p.id %>" class="icon-btn edit-btn" title="Edit">
              <svg width="18" height="18" fill="none">
                <path d="M12 2l4 4-10 10H2v-4L12 2z"></path>
              </svg>
            </a>

            <!-- DELETE -->
            <form action="/bizowner/delete/<%= p.id %>" method="POST">
              <button type="submit" class="icon-btn delete-btn" title="Delete"
                onclick="return confirm('Delete this product?')">
                <svg width="18" height="18" fill="none">
                  <polyline points="3 6 5 6 21 6"></polyline>
                  <path d="M19 6l-1 14H6L5 6"></path>
                  <path d="M10 11v6"></path>
                  <path d="M14 11v6"></path>
                </svg>
              </button>
            </form>
          </div>

          <img src="/images/<%= p.image %>" class="product-img" alt="product">

          <div class="product-name"><%= p.productName %></div>
          <div class="product-price">$<%= Number(p.price || 0).toFixed(2) %></div>

          <div class="meta">
            ID: <%= p.id %><br>
            Stock: <%= p.quantity %><br>
            Image: <%= p.image %>
          </div>

          <form action="/bizowner/replenish/<%= p.id %>" method="POST" class="replenish-row">
            <input type="number" min="1" class="replenish-input" name="quantity" placeholder="Add stock" required>
            <button type="submit" class="replenish-btn">+</button>
          </form>
        </div>
      <% }) %>
    </div>
  </div>

  <script>
    // auto-hide toast
    setTimeout(() => {
      const t = document.querySelector(".toast");
      if (t) t.style.display = "none";
    }, 2500);
  </script>
</body>
</html>
