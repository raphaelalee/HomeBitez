<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - HomeBitez</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Sniglet:wght@700;900&display=swap" rel="stylesheet">

    <style>
        /* Reset default margins and paddings */
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            background-color: #f8f3ed;
            font-family: Arial, sans-serif;
        }

        .container-box {
            display: flex;
            min-height: 100vh; /* ensure full viewport height */
        }

        /* LEFT SIDE */
        .left-box {
            width: 50%;
            background: white;
            padding: 80px; /* extra top padding to prevent logo cutoff */
            display: flex;
            flex-direction: column;
            justify-content: flex-start; /* align from top */
            flex-grow: 1;
            box-sizing: border-box; /* includes padding in height */
        }

        .logo {
            font-family: 'Sniglet', cursive;
            font-size: 40px;
            font-weight: 900;
            margin-bottom: 30px;
            line-height: 1;
            text-shadow: 2px 2px 2px rgba(0,0,0,0.1);
        }
        .logo span.home { color: #f4b400; }
        .logo span.bitez { color: #FF8C1A; }

        h4 { margin-bottom: 10px; }
        p { margin-bottom: 20px; }

        /* RIGHT SIDE */
        .right-box {
            width: 50%;
            background-color: #ffe9d6; /* match body for seamless look */
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px;
            overflow: hidden;
        }

        .right-box img {
            width: 90%;
            max-width: 500px;
            height: 100%;
            max-height: 800px;
            border-radius: 10%; /* optional rounded corner */
            object-fit: cover;
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        /* FORM STYLING */
        .form-control {
            background: #f4f4f4;
            border-radius: 25px;
            height: 45px;
            border: none;
        }
        .password-wrap {
            position: relative;
        }
        .toggle-pass {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            border: none;
            background: transparent;
            color: #666;
            cursor: pointer;
            padding: 4px 6px;
            font-size: 18px;
            line-height: 1;
        }

        .register-btn {
            width: 100%;
            height: 45px;
            background-color: black;
            color: white;
            border-radius: 25px;
            border: none;
            font-size: 16px;
            margin-top: 10px;
        }

        .field-hint {
            font-size: 12px;
            margin-top: 6px;
            color: #666;
        }
        .field-hint.error {
            color: #b3261e;
        }
        .field-hint.ok {
            color: #2e7d32;
        }

        .social-btn {
            display: flex;
            align-items: center;
            gap: 10px;
            width: 100%;
            height: 45px;
            background: white;
            border-radius: 25px;
            border: 1px solid #ddd;
            padding: 5px 15px;
        }

        .social-btn img { height: 20px; }

        a { text-decoration: none; color: #666; }
    </style>
</head>

<body>
<div class="container-box">

    <!-- LEFT SIDE -->
    <div class="left-box">
        <div class="logo">
            <span class="home">Home</span><span class="bitez">Bitez</span>
        </div>

        <h4>Create Your Account!</h4>
        <p>Fill in the form to get started</p>

        <% if (error && error.length > 0) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <div id="clientError" class="alert alert-danger d-none"></div>

        <form id="signupForm" action="/signup" method="POST" novalidate>
            <input type="text" name="username" placeholder="Username" class="form-control mb-3" required>
            <input type="email" name="email" placeholder="Email" class="form-control mb-3" required>
            <input type="text" name="contact" placeholder="Contact" class="form-control mb-3" required>
            <div class="password-wrap mb-3">
                <input id="password" type="password" name="password" placeholder="Password" class="form-control" required>
                <button type="button" class="toggle-pass" aria-label="Show password">
                    <i class="bi bi-eye-slash"></i>
                </button>
            </div>
            <div id="passwordStrength" class="field-hint">Must be 8+ chars with uppercase, lowercase, number, and special character.</div>
            <div class="password-wrap mb-3">
                <input id="confirmPassword" type="password" name="confirmPassword" placeholder="Confirm Password" class="form-control" required>
                <button type="button" class="toggle-pass" aria-label="Show password">
                    <i class="bi bi-eye-slash"></i>
                </button>
            </div>
            <div id="passwordMatch" class="field-hint">Passwords must match.</div>
            
            <button class="register-btn" type="submit">Register</button>
        </form>

        <div class="text-center my-3">or continue with</div>

        <a class="social-btn mb-2" href="/auth/google">
            <img src="https://cdn-icons-png.flaticon.com/512/2991/2991148.png"> Continue with Google
        </a>
        <div class="text-center">
            Already have an account? <a href="/login">Login</a>
        </div>
    </div>

    <!-- RIGHT SIDE IMAGE -->
    <div class="right-box">
        <img src="/images/flatlay-iron-skillet-with-meat-and-other-food.jpg" alt="Food">
    </div>

</div>

<script>
    document.querySelectorAll('.toggle-pass').forEach(btn => {
        btn.addEventListener('click', () => {
            const input = btn.parentElement.querySelector('input');
            const icon = btn.querySelector('i');
            if (!input || !icon) return;
            const willShow = input.type === 'password';
            input.type = willShow ? 'text' : 'password';
            const isHiddenNow = input.type === 'password';
            icon.className = isHiddenNow ? 'bi bi-eye-slash' : 'bi bi-eye';
            btn.setAttribute('aria-label', isHiddenNow ? 'Show password' : 'Hide password');
        });
    });

    const form = document.getElementById('signupForm');
    const passwordInput = document.getElementById('password');
    const confirmInput = document.getElementById('confirmPassword');
    const strengthEl = document.getElementById('passwordStrength');
    const matchEl = document.getElementById('passwordMatch');
    const clientErrorEl = document.getElementById('clientError');

    const getStrength = (value) => {
        const hasUpper = /[A-Z]/.test(value);
        const hasLower = /[a-z]/.test(value);
        const hasNumber = /[0-9]/.test(value);
        const hasSpecial = /[^A-Za-z0-9]/.test(value);
        const longEnough = value.length >= 8;
        const score = [hasUpper, hasLower, hasNumber, hasSpecial, longEnough].filter(Boolean).length;
        const meetsAll = hasUpper && hasLower && hasNumber && hasSpecial && longEnough;

        if (meetsAll) return { label: "Strong", ok: true };
        if (score >= 3 && longEnough) return { label: "Medium (not enough)", ok: false };
        return { label: "Not enough", ok: false };
    };

    const updateStrength = () => {
        const { label, ok } = getStrength(passwordInput.value);
        strengthEl.textContent = `Password strength: ${label}. Must be 8+ chars with uppercase, lowercase, number, and special character.`;
        strengthEl.classList.toggle('ok', ok);
        strengthEl.classList.toggle('error', !ok);
    };

    const updateMatch = () => {
        const matches = passwordInput.value === confirmInput.value && confirmInput.value.length > 0;
        matchEl.textContent = matches ? "Passwords match." : "Passwords must match.";
        matchEl.classList.toggle('ok', matches);
        matchEl.classList.toggle('error', !matches);
    };

    passwordInput.addEventListener('input', () => {
        updateStrength();
        updateMatch();
    });
    confirmInput.addEventListener('input', updateMatch);

    form.addEventListener('submit', (e) => {
        updateStrength();
        updateMatch();
        const { ok } = getStrength(passwordInput.value);
        const matches = passwordInput.value === confirmInput.value;

        if (!ok || !matches) {
            e.preventDefault();
            clientErrorEl.classList.remove('d-none');
            clientErrorEl.textContent = !ok
                ? "Password must be at least 8 characters and include uppercase, lowercase, number, and special character."
                : "Passwords do not match.";
        } else {
            clientErrorEl.classList.add('d-none');
            clientErrorEl.textContent = "";
        }
    });
</script>

</body>
</html>


