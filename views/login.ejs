<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - HomeBitez</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Sniglet font for bubble letters -->
    <link href="https://fonts.googleapis.com/css2?family=Sniglet:wght@700;900&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: #f8f3ed;
            font-family: Arial, sans-serif;
        }

        .container-box {
            display: flex;
            height: 100vh;
        }

        /* LEFT SIDE */
        .left-box {
            width: 50%;
            background: white;
            padding: 80px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        /* HomeBitez logo */
        .logo {
            font-family: 'Sniglet', cursive;
            font-size: 40px;
            font-weight: 900;
            margin-bottom: 30px;
            line-height: 1;
            text-shadow: 2px 2px 2px rgba(0,0,0,0.1);
        }

        .logo span.home {
            color: #f4b400;
        }

        .logo span.bitez {
            color: #FF8C1A; /* orangey bold */
        }

        h2 {
            margin-bottom: 10px;
        }

        p {
            margin-bottom: 20px;
        }

        /* RIGHT SIDE */
        .right-box {
            width: 50%;
            background-color: #ffe9d6;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px;
        }

        /* Rounded image */
        .right-box img {
            width: 80%;
            max-width: 500px;
            height: 100%;
            max-height: 600px;
            border-radius: 10%;
            object-fit: cover;
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .form-control {
            background: #f4f4f4;
            border-radius: 25px;
            height: 45px;
            border: none;
        }
        .password-wrap {
            position: relative;
        }
        .toggle-pass {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            border: none;
            background: transparent;
            color: #666;
            cursor: pointer;
            padding: 4px 6px;
            font-size: 18px;
            line-height: 1;
        }

        .login-btn {
            width: 100%;
            height: 45px;
            background-color: black;
            color: white;
            border-radius: 25px;
            border: none;
            font-size: 16px;
            margin-top: 10px;
        }

        .social-btn {
            display: flex;
            align-items: center;
            gap: 10px;
            width: 100%;
            height: 48px;
            background: white;
            border-radius: 8px;
            border: 1px solid #ddd;
            padding: 5px 15px;
        }

        .social-btn img {
            height: 18px;
        }
        .singpass-btn {
            display: flex;
            justify-content: center;
            align-items: center;
            background: #e53935;
            color: #fff;
            border: none;
            border-radius: 8px;
            font-weight: 700;
            text-transform: none;
        }
        .singpass-btn:hover {
            background: #d32f2f;
            color: #fff;
        }
        .google-btn {
            background: #fff;
            color: #111;
            border: 1px solid #ddd;
            justify-content: center;
        }

        a {
            text-decoration: none;
            color: #666;
        }
    </style>
</head>

<body>

<div class="container-box">

    <!-- LEFT SIDE -->
    <div class="left-box">
        <div class="logo">
            <span class="home">Home</span><span class="bitez">Bitez</span>
        </div>

        <h4>Welcome Back!</h4>
        <p>Sign in with your email and password</p>

        <% if (error && error.length > 0) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <form action="/login" method="POST">
            <input type="email" name="email" placeholder="Your Email" class="form-control mb-3" required />
            <div class="password-wrap mb-3">
                <input type="password" name="password" placeholder="Your Password" class="form-control" required />
                <button type="button" class="toggle-pass" aria-label="Show password">
                    <i class="bi bi-eye-slash"></i>
                </button>
            </div>

            <div class="text-end mb-3">
                <a href="/forgot-password">Forgot password?</a>
            </div>

            <button class="login-btn">Login</button>
        </form>

        <div class="text-center my-3">or continue with</div>

        <a class="social-btn mb-2 google-btn" href="/auth/google">
            <img src="https://cdn-icons-png.flaticon.com/512/2991/2991148.png">
            Continue with Google
        </a>
        <a class="social-btn mb-2 singpass-btn" href="/singpass/start?mode=login">
            Sign with singpass
        </a>
        <div class="text-center">
            Donâ€™t have an account? <a href="/register">Sign up</a>
        </div>
    </div>

    <!-- RIGHT SIDE IMAGE -->
    <div class="right-box">
        <img src="/images/flatlay-iron-skillet-with-meat-and-other-food.jpg" alt="Food">
    </div>

</div>

<script>
    document.querySelectorAll('.toggle-pass').forEach(btn => {
        btn.addEventListener('click', () => {
            const input = btn.parentElement.querySelector('input');
            const icon = btn.querySelector('i');
            if (!input || !icon) return;
            const willShow = input.type === 'password';
            input.type = willShow ? 'text' : 'password';
            const isHiddenNow = input.type === 'password';
            icon.className = isHiddenNow ? 'bi bi-eye-slash' : 'bi bi-eye';
            btn.setAttribute('aria-label', isHiddenNow ? 'Show password' : 'Hide password');
        });
    });
</script>

</body>
</html>

