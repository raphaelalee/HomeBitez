<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>HomeBitez Menu</title>

<link href="https://fonts.googleapis.com/css2?family=Sniglet:wght@700&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
body{
    margin:0;
    background:#faefe5;
    font-family: Arial, sans-serif;
}

/* HEADER */
header{
    display:flex;
    justify-content:space-between;
    align-items:center;
    padding:15px 40px;
}
.logo{
    font-family:'Sniglet', cursive;
    font-size:26px;
    color:#dd9b00;
}
.nav-links a{
    margin:0 12px;
    text-decoration:none;
    color:#333;
}
.icons i{
    margin-left:15px;
    font-size:18px;
    cursor:pointer;
}

/* TITLE */
.title{
    text-align:center;
    font-size:28px;
    margin-top:10px;
}
.underline{
    width:70px;
    height:3px;
    background:#dd9b00;
    margin:8px auto 25px;
}

/* TABS */
.tabs{
    display:flex;
    justify-content:center;
    gap:15px;
    flex-wrap:wrap;
}
.tab{
    padding:8px 18px;
    background:white;
    border-radius:20px;
    border:1px solid #ddd;
    font-size:14px;
}
.tab.active{
    background:#dd9b00;
    color:white;
}

/* GRID */
.grid{
    display:grid;
    grid-template-columns:repeat(auto-fit, minmax(250px,1fr));
    gap:25px;
    padding:30px 50px;
}

/* CARD */
.card{
    background:white;
    border-radius:14px;
    padding:15px;
    box-shadow:0 2px 8px rgba(0,0,0,0.1);
}
.card img{
    width:100%;
    height:180px;
    object-fit:cover;
    border-radius:12px;
}
.card h5{
    margin-top:12px;
}
.card p{
    font-size:13px;
    color:#555;
    margin:4px 0;
}
.price{
    font-weight:bold;
    margin-top:6px;
}
.btn-view{
    background:#dd9b00;
    color:white;
    border:none;
    padding:6px 14px;
    border-radius:20px;
    font-size:13px;
}
</style>
</head>

<body>

<h2 class="title">Menu</h2>
<div class="underline"></div>

<div class="tabs">
    <div class="tab active" data-category="All">All</div>
    <div class="tab" data-category="Local">Local</div>
    <div class="tab" data-category="International">International</div>
    <div class="tab" data-category="Side Dishes">Side Dishes</div>
    <div class="tab" data-category="Drinks">Drinks</div>
    <div class="tab" data-category="Dessert">Dessert</div>
</div>

<div class="grid">
    <% products.forEach(product => { %>
        <div class="card">
            <img src="/uploads/<%= product.image %>" alt="<%= product.product_name %>">
            <h5><%= product.product_name %></h5>
            <p><%= product.description %></p>
            <p class="price">$<%= product.price %></p>
            <button class="btn-view">View Product</button>
            <button class="btn add-to-cart"
                data-id="<%=product.id %>"
                data-name="<%= product.product_name %>"
                data-price="<%= product.price %>"
                data-image="/public/images/<%= product.image %>">
                Add to Cart
            </button>
        </div>
    <% }) %>
</div>

<script>
function showProducts(category) {
    const menuGrid = document.getElementById("menuGrid");
    menuGrid.innerHTML = "";

    const filtered = category === "All"
        ? products
        : products.filter(p => p.category === category);

    filtered.forEach(product => {
        menuGrid.innerHTML += `
            <div class="product-card">
                <img src="/public/images/${product.image}">
                <h3>${product.product_name}</h3>
                <p>$${product.price}</p>
            </div>
        `;
    });
}
</script>

<script>
document.querySelectorAll(".tab").forEach(tab=>{
    tab.addEventListener("click",()=>{
        document.querySelector(".tab.active").classList.remove("active");
        tab.classList.add("active");
        showProducts(tab.dataset.category);
    });
});
</script>

<script>
document.querySelectorAll('.add-to-cart').forEach(btn => {
    btn.addEventListener('click', () => {
        fetch("/cart/add", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                name: btn.dataset.name,
                price: btn.dataset.price,
                qty: 1,
                image: btn.dataset.image
            })
        })
        .then(res => res.json())
        .then(data => {
            if (data.ok) alert("Added to cart!");
            else alert(data.error || "Failed to add");
        })
        .catch(() => alert("Server error"));
    });
});
</script>

<script>
// Attach click handlers to server-rendered "Add to Cart" buttons
document.querySelectorAll('.add-to-cart').forEach(btn => {
    btn.addEventListener('click', () => {
        const name = btn.dataset.name || '';
        const price = parseFloat(btn.dataset.price) || 0;
        addToCart(name, price);
    });
});
</script>

</body>
</html>