<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>HomeBitez Menu</title>

<link href="https://fonts.googleapis.com/css2?family=Fraunces:wght@600;700;800&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
body{
    margin:0;
    background:#faefe5;
    font-family: "Outfit", Arial, sans-serif;
}

/* TITLE */
.title{
    text-align:center;
    font-family:'Fraunces', 'Times New Roman', serif;
    font-size:28px;
    margin-top:10px;
}
.underline{
    width:70px;
    height:3px;
    background:#dd9b00;
    margin:8px auto 25px;
}

/* TABS */
.tabs-wrap{
    display:flex;
    justify-content:center;
    align-items:center;
    gap:16px;
    flex-wrap:wrap;
    padding:0 20px;
}
.tab{
    padding:8px 18px;
    background:white;
    border-radius:20px;
    border:1px solid #ddd;
    font-size:14px;
    cursor:pointer;
    transition: background 0.2s ease, color 0.2s ease, transform 0.2s ease;
}
.tab.active{
    background:#dd9b00;
    color:white;
}
.tab:hover{
    transform: translateY(-1px);
}
.menu-search{
    display:flex;
    align-items:center;
    background:#fff;
    border:1px solid #ddd;
    border-radius:999px;
    padding:6px 10px 6px 14px;
    gap:10px;
    box-shadow:0 2px 6px rgba(0,0,0,0.05);
}
.menu-search input{
    border:none;
    outline:none;
    background:transparent;
    min-width:200px;
    font-size:14px;
}
.menu-search button{
    border:none;
    background:#dd9b00;
    color:#fff;
    padding:6px 12px;
    border-radius:999px;
    font-size:12px;
}
.section-label{
    max-width:1200px;
    margin:22px auto 8px;
    padding:0 52px;
    color:#5f4a2c;
    font-weight:700;
    letter-spacing:0.2px;
}
.feature-strip{
    max-width:1200px;
    margin:0 auto 4px;
    padding:0 50px;
    display:flex;
    gap:10px;
    overflow:auto;
}
.feature-item{
    flex:0 0 auto;
    text-decoration:none;
    border:1px solid #efdcb9;
    background:#fff9ef;
    border-radius:999px;
    padding:7px 12px;
    color:#5b4527;
    font-size:13px;
    font-weight:600;
    white-space:nowrap;
}
.feature-item strong{
    color:#0b7a44;
}
@media (max-width: 768px){
    .section-label{ padding:0 20px; }
    .feature-strip{ padding:0 20px; }
}

/* GRID */
.grid{
    display:grid;
    grid-template-columns:repeat(auto-fit, minmax(250px, 250px));
    gap:25px;
    padding:30px 50px;
    justify-content:center;
}

/* CARD */
.card{
    background:white;
    border-radius:14px;
    padding:15px;
    border:1px solid #ecdcc5;
    box-shadow:0 4px 14px rgba(0,0,0,0.08);
    display:flex;
    flex-direction:column;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}
.card:hover{
    transform:translateY(-3px);
    box-shadow:0 8px 20px rgba(0,0,0,0.12);
}
.card img{
    width:100%;
    height:180px;
    object-fit:cover;
    border-radius:12px;
    background:#f4eadb;
}
.card h5{
    margin-top:12px;
    margin-bottom:8px;
    font-weight:700;
    color:#2d2418;
}
.meta-row{
    display:flex;
    align-items:center;
    justify-content:space-between;
    margin-bottom:8px;
    gap:8px;
}
.chip{
    display:inline-flex;
    align-items:center;
    padding:4px 10px;
    border-radius:999px;
    background:#fff6e4;
    color:#7a5300;
    border:1px solid #f2d8a1;
    font-size:12px;
    font-weight:600;
}
.chip.best{
    background:#fef0c7;
    color:#8a5a00;
    border-color:#f3ce74;
}
.chip.discount{
    background:#ffe8e8;
    color:#a13030;
    border-color:#f4b7b7;
}
.stock{
    font-size:12px;
    font-weight:600;
    color:#2f7a46;
}
.stock.out{
    color:#b23a2f;
}
.desc{
    font-size:13px;
    color:#555;
    margin:4px 0;
    min-height:38px;
    display:-webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
    overflow:hidden;
}
.price{
    font-weight:bold;
    margin-top:6px;
    color:#2d2418;
    font-size:16px;
}
.price-stack{
    display:flex;
    align-items:baseline;
    gap:8px;
}
.price-old{
    font-size:13px;
    color:#8b8174;
    text-decoration:line-through;
}
.flag-row{
    display:flex;
    flex-wrap:wrap;
    gap:6px;
    margin-top:2px;
    margin-bottom:6px;
}
.flag{
    border-radius:999px;
    padding:3px 8px;
    font-size:11px;
    font-weight:600;
}
.flag.diet{
    background:#ecf8ed;
    color:#22623a;
    border:1px solid #bfe4c6;
}
.flag.allergen{
    background:#fff2e8;
    color:#8b4a1f;
    border:1px solid #f2cfb5;
}
.btn-view{
    display:block;
    text-align:center;
    background:#dd9b00;
    color:white;
    border:none;
    padding:6px 14px;
    border-radius:20px;
    font-size:13px;
    text-decoration:none;
}
.btn-view:hover{
    background:#c98c00;
    color:#fff;
}
.btn.add-to-cart{
    margin-top:8px;
    background:#fff4db;
    border:1px solid #dd9b00;
    color:#8b5c00;
    border-radius:20px;
    font-size:13px;
}
.btn.add-to-cart:hover{
    background:#dd9b00;
    color:#fff;
}
.empty-state{
    grid-column:1/-1;
    text-align:center;
    color:#7a6a55;
    padding:30px 0;
    font-size:15px;
}
@media (max-width: 768px){
    .grid{ padding:20px; }
    .menu-search input{ min-width:140px; }
}
</style>
</head>

<body>

<%- include('partials/navbar-user') %>

<h2 class="title">Menu</h2>
<div class="underline"></div>

<div class="tabs-wrap">
    <div class="tab active" data-category="All">All</div>
    <div class="tab" data-category="Local">Local</div>
    <div class="tab" data-category="International">International</div>
    <div class="tab" data-category="Side Dishes">Side Dishes</div>
    <div class="tab" data-category="Drinks">Drinks</div>
    <div class="tab" data-category="Dessert">Dessert</div>
    <div class="menu-search" role="search">
        <input type="text" id="menuSearch" placeholder="Search for dishes...">
        <button type="button" id="menuSearchBtn">Search</button>
    </div>
</div>

<% const bestSellers = products.filter(p => p.isBestSeller); %>
<% if (bestSellers.length) { %>
<div class="section-label">Best Sellers & Deals</div>
<div class="feature-strip">
    <% bestSellers.forEach(item => { %>
        <a class="feature-item" href="/menu/product/<%= item.id %>">
            <%= item.productName %>
            <% if (Number(item.discountPercent || 0) > 0) { %>
                - <strong><%= Number(item.discountPercent) %>% OFF</strong>
            <% } %>
        </a>
    <% }) %>
</div>
<% } %>

<div class="grid" id="menuGrid">
    <% products.forEach(product => { %>
        <% 
          const imageName = product.image || '';
          const fallbackImage = '/images/flatlay-iron-skillet-with-meat-and-other-food.jpg';
          const productDescription = (product.description || '').trim() || 'Freshly prepared and packed with flavor.';
          const imagePath = imageName
            ? (imageName.startsWith('/') ? imageName : `/images/${imageName}`)
            : fallbackImage;
          const stockQty = Number(product.quantity || 0);
          const discountPercent = Number(product.discountPercent || 0);
          const displayPrice = Number(product.finalPrice ?? product.price ?? 0).toFixed(2);
          const originalPrice = Number(product.originalPrice ?? product.price ?? 0).toFixed(2);
          const dietaryTags = Array.isArray(product.dietaryTags) ? product.dietaryTags : [];
          const allergenTags = Array.isArray(product.allergenTags) ? product.allergenTags : [];
        %>
        <div class="card"
            data-category="<%= product.category || '' %>"
            data-name="<%= product.productName || '' %>"
            data-description="<%= productDescription %>"
            data-tags="<%= [...dietaryTags, ...allergenTags].join(' ') %>">
            <img src="<%= imagePath %>" alt="<%= product.productName %>">
            <h5><%= product.productName %></h5>
            <div class="meta-row">
                <span class="chip"><%= product.category || 'House Special' %></span>
                <div style="display:flex; gap:6px; align-items:center;">
                    <% if (product.isBestSeller) { %>
                        <span class="chip best">Best Seller</span>
                    <% } %>
                    <% if (discountPercent > 0) { %>
                        <span class="chip discount"><%= discountPercent %>% OFF</span>
                    <% } %>
                </div>
            </div>
            <div class="flag-row">
                <% dietaryTags.forEach(tag => { %>
                    <span class="flag diet"><%= tag %></span>
                <% }) %>
                <% allergenTags.forEach(tag => { %>
                    <span class="flag allergen"><%= tag %></span>
                <% }) %>
            </div>
            <p class="desc"><%= productDescription %></p>
            <div class="meta-row" style="margin-top:4px;">
                <div class="price-stack">
                    <p class="price">$<%= displayPrice %></p>
                    <% if (discountPercent > 0) { %>
                        <span class="price-old">$<%= originalPrice %></span>
                    <% } %>
                </div>
                <span class="stock <%= stockQty > 0 ? '' : 'out' %>">
                    <%= stockQty > 0 ? (stockQty + ' left') : 'Sold out' %>
                </span>
            </div>
            <a class="btn-view" href="/menu/product/<%= product.id %>">View Product</a>
            <button class="btn add-to-cart"
                data-id="<%=product.id %>"
                data-name="<%= product.productName %>"
                data-price="<%= displayPrice %>"
                data-image="<%= imagePath %>"
                data-stock="<%= stockQty %>"
                <%= stockQty > 0 ? '' : 'disabled' %>>
                Add to Cart
            </button>
        </div>
    <% }) %>
</div>

<script>
const tabs = document.querySelectorAll(".tab");
const searchInput = document.getElementById("menuSearch");
const searchBtn = document.getElementById("menuSearchBtn");
const cards = Array.from(document.querySelectorAll(".grid .card"));
const emptyState = document.createElement("div");
emptyState.className = "empty-state";
emptyState.textContent = "No items match your filters.";

let activeCategory = "All";

function normalizeCategory(value) {
    const normalized = (value || "").trim().toLowerCase();
    if (normalized === "sides") return "side dishes";
    if (normalized === "beverage") return "drinks";
    return normalized;
}

function applyFilters() {
    const term = (searchInput.value || "").trim().toLowerCase();
    let visibleCount = 0;

    cards.forEach(card => {
        const category = normalizeCategory(card.dataset.category || "");
        const name = (card.dataset.name || "").toLowerCase();
        const description = (card.dataset.description || "").toLowerCase();
        const tags = (card.dataset.tags || "").toLowerCase();
        const normalizedActive = normalizeCategory(activeCategory);
        const hasCategory = Boolean(category);

        const matchesCategory =
            normalizedActive === "all" ||
            (hasCategory && (
                category === normalizedActive ||
                category.includes(normalizedActive) ||
                normalizedActive.includes(category)
            ));
        const matchesSearch = !term || name.includes(term) || description.includes(term) || tags.includes(term);

        const show = matchesCategory && matchesSearch;
        card.style.display = show ? "flex" : "none";
        if (show) visibleCount += 1;
    });

    const grid = document.getElementById("menuGrid");
    if (visibleCount === 0) {
        if (!grid.contains(emptyState)) grid.appendChild(emptyState);
    } else if (grid.contains(emptyState)) {
        grid.removeChild(emptyState);
    }
}

tabs.forEach(tab => {
    tab.addEventListener("click", () => {
        document.querySelector(".tab.active").classList.remove("active");
        tab.classList.add("active");
        activeCategory = tab.dataset.category || "All";
        applyFilters();
    });
});

searchBtn.addEventListener("click", applyFilters);
searchInput.addEventListener("input", applyFilters);
searchInput.addEventListener("keydown", (e) => {
    if (e.key === "Enter") applyFilters();
});
applyFilters();
</script>

<script>
function showToast(message, isError = false) {
    if (window.pushFlash) {
        window.pushFlash(message, isError ? "error" : "success");
        return;
    }
    alert(message);
}

const isLoggedIn = <%= user ? 'true' : 'false' %>;

document.querySelectorAll('.add-to-cart').forEach(btn => {
    btn.addEventListener('click', () => {
        if (!isLoggedIn) {
            showToast("Please login or sign up to add items to cart.", true);
            window.location.href = "/login";
            return;
        }

        const updateCartBadge = (count) => {
            const cartLink = document.querySelector('.hb-icons a[href="/cart"]');
            if (!cartLink) return;
            const existing = cartLink.querySelector('.cart-badge');
            const safeCount = Number(count || 0);
            if (safeCount <= 0) {
                if (existing) existing.remove();
                return;
            }
            const text = safeCount > 99 ? '99+' : String(safeCount);
            if (existing) {
                existing.textContent = text;
            } else {
                const badge = document.createElement('span');
                badge.className = 'cart-badge';
                badge.textContent = text;
                cartLink.appendChild(badge);
            }
        };

        fetch("/cart/add", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                name: btn.dataset.name,
                price: btn.dataset.price,
                qty: 1,
                image: btn.dataset.image
            })
        })
        .then(res => res.json())
        .then(data => {
            if (data.ok) {
                showToast("Added to cart!");
                if (typeof data.cartCount !== "undefined") {
                    updateCartBadge(data.cartCount);
                }
            }
            else showToast(data.error || "Failed to add", true);
        })
        .catch(() => showToast("Server error", true));
    });
});
</script>

</body>
</html>

