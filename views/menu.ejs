<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>HomeBitez Menu</title>

<!-- Google Font -->
<link href="https://fonts.googleapis.com/css2?family=Sniglet:wght@700;900&display=swap" rel="stylesheet">

<!-- Bootstrap CSS & Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
body{
    margin:0;
    font-family: Arial, sans-serif;
    background:#faefe5;
}

/* MENU TITLE */
.title{
    text-align:center;
    font-size:26px;
    margin-top:10px;
    margin-bottom:5px;
}
.underline{
    width:70px;
    height:3px;
    background:#dd9b00;
    margin:0 auto 25px;
}

/* CATEGORY TABS */
.tabs{
    display:flex;
    justify-content:center;
    gap:15px;
    margin-bottom:30px;
    flex-wrap:wrap;
}
.tab{
    padding:8px 18px;
    border-radius:20px;
    background:white;
    cursor:pointer;
    border:1px solid #ddd;
    font-size:14px;
}
.tab.active{
    background:#dd9b00;
    color:white;
    border-color:#dd9b00;
}

/* MENU GRID */
.grid{
    display:grid;
    grid-template-columns:repeat(auto-fit, minmax(250px,1fr));
    gap:25px;
    padding:20px 40px;
}

/* CARD */
.card{
    background:white;
    border-radius:12px;
    padding:15px;
    box-shadow:0 2px 6px rgba(0,0,0,0.1);
}
.card img{
    width:100%;
    height:180px;
    object-fit:cover;
    border-radius:12px;
}
.card h3{
    margin:12px 0 6px;
    font-size:17px;
}
.card p{
    font-size:13px;
    color:#5a5a5a;
    margin:3px 0;
}
.price{
    margin-top:8px;
    font-size:14px;
}
.btn{
    margin-top:10px;
    padding:8px 14px;
    background:#dd9b00;
    color:white;
    border:none;
    border-radius:20px;
    cursor:pointer;
    font-size:13px;
}
</style>
</head>
<body>

<!-- NAV -->
<%- include('partials/navbar-user') %>

<h2 class="title">Menu</h2>
<div class="underline"></div>

<!-- CATEGORY TABS -->
<div class="tabs">
    <div class="tab active" data-category="all">All</div>
    <div class="tab" data-category="local">Local</div>
    <div class="tab" data-category="international">International</div>
    <div class="tab" data-category="side">Side Dishes</div>
    <div class="tab" data-category="drinks">Drinks</div>
    <div class="tab" data-category="dessert">Dessert</div>
</div>

<!-- MENU GRID -->
<div class="grid" id="menuGrid"></div>

<script>
const products = <%- JSON.stringify(products || []) %>;
const menuGrid = document.getElementById('menuGrid');

function showProducts(category){
    menuGrid.innerHTML = "";
    products
        .filter(p => category === "all" ? true : (p.category || '').toLowerCase() === category)
        .forEach(p => {
            const name = p.productName || p.name || '';
            const desc = p.description || p.desc || '';
            const allergies = p.allergies || '';
            const priceVal = Number(p.price || 0);
            const image = p.image || '/images/default.jpg';

            menuGrid.innerHTML += `
                <div class="card">
                    <img src="${image}" alt="${name}">
                    <h3>${name}</h3>
                    <p>${desc}</p>
                    <p><strong>Allergies:</strong> ${allergies}</p>
                    <p class="price"><strong>Price:</strong> $${priceVal.toFixed(2)}</p>
                    <button class="btn">View Product</button>
                    <button class="btn" onclick="addToCart('${name.replace(/'/g, "\\'")}', ${priceVal}, '${image}')">
                        Add to Cart
                    </button>
                </div>
            `;
        });
}
showProducts("all");

// CATEGORY FILTERING
document.querySelectorAll(".tab").forEach(tab=>{
    tab.addEventListener("click",()=>{
        const current = document.querySelector(".tab.active");
        if (current) current.classList.remove("active");
        tab.classList.add("active");
        showProducts(tab.dataset.category);
    });
});

// ADD TO CART FUNCTION
function addToCart(name, price, image) {
    fetch("/cart/add", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
            name: name,
            price: price,
            qty: 1,
            image: image || ''
        })
    })
    .then(res => res.json())
    .then(data => {
        if (data.ok) {
            alert("Added to cart");
        } else {
            alert(data.error || "Failed to add to cart");
        }
    })
    .catch(err => {
        console.error(err);
        alert("Error adding to cart");
    });
}
</script>

</body>
</html>
