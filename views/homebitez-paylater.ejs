<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>HomeBitez PayLater</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link href="https://fonts.googleapis.com/css2?family=Fraunces:wght@600;700;800&family=Manrope:wght@400;600;700&display=swap" rel="stylesheet">

  <style>
    body { background:#faefe5; font-family: "Manrope", "Segoe UI", sans-serif; margin:0; padding-bottom:50px; }

    .hb-title { text-align:center; font-family:'Fraunces', "Times New Roman", serif; font-size:26px; margin:16px 0 4px; }
    .hb-sub { text-align:center; font-size:13px; color:#6b6b6b; margin-bottom:8px; }
    .hb-underline { width:70px; height:3px; background:#dd9b00; margin:0 auto 22px; border-radius:99px; }

    .card-summary, .card-paylater { background:white; border-radius:14px; padding:16px; box-shadow:0 2px 6px rgba(0,0,0,0.08); border:1px solid #eee; margin-bottom:18px; font-size:14px; }
    .card-title { font-family:'Fraunces', "Times New Roman", serif; font-size:18px; color:#2a241e; display:flex; align-items:center; gap:10px; margin-bottom:12px; font-weight:700; }
    .pill { display:inline-flex; align-items:center; gap:6px; padding:4px 10px; background:#fff7e3; border:1px solid #ffe2a6; border-radius:999px; font-size:12px; color:#7a5a00; font-weight: normal; }

    .hb-btn { padding:10px 16px; background:#dd9b00; color:white; border:none; border-radius:20px; font-weight:700; display:inline-flex; align-items:center; gap:6px; justify-content:center; cursor:pointer; text-decoration:none; }
    .hb-btn:hover{ filter:brightness(0.97); }
    .hb-btn-outline { background:white; color:#dd9b00; border:1px solid #dd9b00; }

    .wallet-hero { background:linear-gradient(135deg, #fff7e3 0%, #faefe5 45%, #ffffff 100%); border:1px solid #ffe2a6; border-radius:16px; padding:18px 20px; margin-bottom:20px; }
    .balance-amount { font-size:28px; font-weight:900; color:#2a241e; letter-spacing:0.4px; }
    .balance-sub { font-size:12px; color:#7a5a00; }
    .wallet-grid { display:grid; grid-template-columns: 1.2fr 1fr; gap:20px; }
    @media (max-width: 900px){ .wallet-grid { grid-template-columns: 1fr; } }

    .wallet-modal-overlay {
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.45);
      display: none;
      align-items: center;
      justify-content: center;
      padding: 16px;
      z-index: 999;
    }
    .wallet-modal {
      background: #fff;
      width: 100%;
      max-width: 420px;
      border-radius: 16px;
      padding: 18px;
      box-shadow: 0 10px 24px rgba(0,0,0,0.12);
    }
    .wallet-modal h3 { margin: 0 0 8px; font-weight: 800; }
    .wallet-modal .muted { color:#6b6b6b; font-size:12px; }
    .wallet-modal .summary-line { display:flex; justify-content:space-between; align-items:center; font-size:14px; margin-top:6px; }
    .wallet-modal .summary-line strong { font-size:16px; }
    .wallet-modal .actions { display:grid; gap:10px; margin-top:14px; }
    .wallet-chip {
      display:inline-flex;
      align-items:center;
      gap:6px;
      padding:6px 12px;
      border-radius:999px;
      border:1px solid #ffe2a6;
      background:#fff7e3;
      font-weight:700;
      margin-top:8px;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar-user') %>

  <div class="container my-4" style="max-width:900px;">
    <h2 class="hb-title">HomeBitez PayLater</h2>
    <div class="hb-sub">Split your bill, stay in control.</div>
    <div class="hb-underline"></div>

    <% if (paylaterMessage) { %>
      <div class="card-summary"><div class="alert alert-success mb-0"><%= paylaterMessage %></div></div>
    <% } %>
    <% if (paylaterError) { %>
      <div class="card-summary"><div class="alert alert-warning mb-0"><%= paylaterError %></div></div>
    <% } %>

    <div class="wallet-hero">
      <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div>
          <div class="balance-sub">Credit Limit</div>
          <div class="balance-amount">$<%= creditLimit.toFixed(2) %></div>
        </div>
        <div>
          <div class="balance-sub">Outstanding</div>
          <div class="balance-amount">$<%= outstanding.toFixed(2) %></div>
        </div>
        <div>
          <div class="balance-sub">Available</div>
          <div class="balance-amount">$<%= availableCredit.toFixed(2) %></div>
        </div>
      </div>
      <div class="balance-sub mt-2">Wallet balance: $<%= walletBalance.toFixed(2) %></div>
    </div>

    <div class="wallet-grid">
      <div>
        <div class="card-paylater p-3 mb-3">
          <div class="card-title"><i class="bi bi-calendar2-check"></i> Plan Details</div>
          <% if (!planCount || planCount <= 0) { %>
            <div class="text-muted">No active plan. Choose 3 or 6 months in checkout.</div>
            <div class="mt-3">
              <a href="/checkout" class="hb-btn hb-btn-outline">Go to Checkout</a>
            </div>
          <% } else { %>
            <div class="summary-line d-flex justify-content-between"><span>Active Plans</span><span><strong><%= planCount %></strong></span></div>
            <div class="summary-line d-flex justify-content-between"><span>Monthly (Total)</span><span><strong>$<%= Number(monthly || 0).toFixed(2) %></strong></span></div>
            <div class="summary-line d-flex justify-content-between"><span>Next Due</span><span><strong><%= nextDueDate ? new Date(nextDueDate).toLocaleDateString() : 'Paid' %></strong></span></div>
            <div class="mt-2 text-muted" style="font-size:12px;">Includes all active PayLater orders.</div>
            <div class="mt-2">
              <ul class="list-group">
                <% (planOrders || []).forEach(p => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><%= p.orderRef %> · <%= p.months %> months</span>
                    <span>$<%= Number(p.total || 0).toFixed(2) %></span>
                  </li>
                <% }) %>
              </ul>
            </div>
          <% } %>
        </div>

        <div class="card-summary p-3">
          <div class="card-title"><i class="bi bi-clock-history"></i> Payment Schedule</div>
          <ul class="list-group">
            <% if (!schedule || schedule.length === 0) { %>
              <li class="list-group-item">No schedule yet.</li>
            <% } else { %>
              <% schedule.forEach(item => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <span><%= item.orderRef %> · <%= new Date(item.dueDate).toLocaleDateString() %> - <%= item.status %></span>
                  <span>$<%= Number(item.amount || 0).toFixed(2) %></span>
                </li>
              <% }) %>
            <% } %>
          </ul>
        </div>
      </div>

      <div>
        <div class="card-paylater p-3 mb-3">
          <div class="card-title"><i class="bi bi-cash-coin"></i> Pay Installment</div>
          <div class="text-muted mb-2" style="font-size:12px;">Pay the next installment with your wallet or PayPal.</div>
          <div class="d-grid gap-2">
            <button type="button" class="hb-btn hb-btn-outline w-100" id="payInstallmentWalletBtn" <%= outstanding <= 0 ? 'disabled' : '' %>>
              <i class="bi bi-wallet2"></i> Pay Installment (Wallet)
            </button>
            <form action="/paylater/pay-installment/paypal" method="POST">
              <button type="submit" class="hb-btn hb-btn-outline w-100" <%= outstanding <= 0 ? 'disabled' : '' %>>
                <i class="bi bi-paypal"></i> Pay Installment (PayPal)
              </button>
            </form>
          </div>
        </div>

        <div class="card-paylater p-3">
          <div class="card-title"><i class="bi bi-lightning-charge"></i> Pay Early</div>
          <div class="text-muted mb-2" style="font-size:12px;">Pay the full remaining balance early.</div>
          <div class="d-grid gap-2">
            <button type="button" class="hb-btn w-100" id="payEarlyWalletBtn" <%= outstanding <= 0 ? 'disabled' : '' %>>
              <i class="bi bi-wallet2"></i> Pay Early (Wallet)
            </button>
            <form action="/paylater/pay-early/paypal" method="POST">
              <button type="submit" class="hb-btn w-100" <%= outstanding <= 0 ? 'disabled' : '' %>>
                <i class="bi bi-paypal"></i> Pay Early (PayPal)
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="wallet-modal-overlay" id="walletPayModal">
    <div class="wallet-modal">
      <h3>Pay with Wallet</h3>
      <div class="muted">Confirm your PayLater wallet payment.</div>
      <div class="summary-line">
        <span>Payment Type</span>
        <strong id="walletPayTypeLabel">Installment</strong>
      </div>
      <div class="summary-line">
        <span>Amount</span>
        <strong>$<span id="walletPayAmount">0.00</span></strong>
      </div>
      <div class="summary-line">
        <span>Wallet Balance</span>
        <strong>$<span id="walletPayBalance"><%= Number(walletBalance || 0).toFixed(2) %></span></strong>
      </div>
      <div class="actions">
        <button class="hb-btn w-100" type="button" id="walletPayConfirmBtn">Pay Now</button>
        <button class="hb-btn hb-btn-outline w-100" type="button" id="walletPayCloseBtn">Close</button>
      </div>
      <div class="muted mt-2" style="text-align:center;">No enough funds? We'll show top up options.</div>
    </div>
  </div>

  <div class="wallet-modal-overlay" id="walletShortageModal">
    <div class="wallet-modal">
      <h3>Insufficient Wallet Balance</h3>
      <div class="muted">Top up your wallet or use another payment method.</div>
      <div class="wallet-chip">Top up needed: $<span id="walletShortageAmount">0.00</span></div>
      <div class="actions">
        <a class="hb-btn w-100" id="walletTopupLink" href="/digitalwallet">Top Up Wallet</a>
        <form id="walletAltPayForm" action="/paylater/pay-installment/paypal" method="POST">
          <button class="hb-btn hb-btn-outline w-100" type="submit">Use PayPal Instead</button>
        </form>
        <button class="hb-btn hb-btn-outline w-100" type="button" id="walletShortageCloseBtn">Close</button>
      </div>
    </div>
  </div>

  <script>
    const installmentAmount = Number("<%= Number(monthly || 0).toFixed(2) %>");
    const earlyAmount = Number("<%= Number(outstanding || 0).toFixed(2) %>");
    const walletBalance = Number("<%= Number(walletBalance || 0).toFixed(2) %>");

    const payInstallmentWalletBtn = document.getElementById("payInstallmentWalletBtn");
    const payEarlyWalletBtn = document.getElementById("payEarlyWalletBtn");
    const walletPayModal = document.getElementById("walletPayModal");
    const walletPayTypeLabel = document.getElementById("walletPayTypeLabel");
    const walletPayAmount = document.getElementById("walletPayAmount");
    const walletPayConfirmBtn = document.getElementById("walletPayConfirmBtn");
    const walletPayCloseBtn = document.getElementById("walletPayCloseBtn");

    const walletShortageModal = document.getElementById("walletShortageModal");
    const walletShortageAmount = document.getElementById("walletShortageAmount");
    const walletTopupLink = document.getElementById("walletTopupLink");
    const walletAltPayForm = document.getElementById("walletAltPayForm");
    const walletShortageCloseBtn = document.getElementById("walletShortageCloseBtn");

    let selectedPayType = "installment";

    function openWalletPayModal(type) {
      selectedPayType = type;
      const amount = type === "early" ? earlyAmount : installmentAmount;
      walletPayTypeLabel.textContent = type === "early" ? "Pay Early" : "Installment";
      walletPayAmount.textContent = amount.toFixed(2);
      if (walletPayModal) walletPayModal.style.display = "flex";
    }

    function closeWalletPayModal() {
      if (walletPayModal) walletPayModal.style.display = "none";
    }

    function showWalletShortage(needed) {
      const neededFixed = Number(needed || 0).toFixed(2);
      if (walletShortageAmount) walletShortageAmount.textContent = neededFixed;
      if (walletTopupLink) {
        walletTopupLink.href = `/digitalwallet?redirect=/paylater&topup=${encodeURIComponent(neededFixed)}`;
      }
      if (walletAltPayForm) {
        walletAltPayForm.action = selectedPayType === "early"
          ? "/paylater/pay-early/paypal"
          : "/paylater/pay-installment/paypal";
      }
      if (walletShortageModal) walletShortageModal.style.display = "flex";
    }

    function closeWalletShortage() {
      if (walletShortageModal) walletShortageModal.style.display = "none";
    }

    if (payInstallmentWalletBtn) {
      payInstallmentWalletBtn.addEventListener("click", () => openWalletPayModal("installment"));
    }
    if (payEarlyWalletBtn) {
      payEarlyWalletBtn.addEventListener("click", () => openWalletPayModal("early"));
    }

    if (walletPayCloseBtn) walletPayCloseBtn.addEventListener("click", closeWalletPayModal);
    if (walletPayModal) {
      walletPayModal.addEventListener("click", (e) => {
        if (e.target === walletPayModal) closeWalletPayModal();
      });
    }

    if (walletShortageCloseBtn) walletShortageCloseBtn.addEventListener("click", closeWalletShortage);
    if (walletShortageModal) {
      walletShortageModal.addEventListener("click", (e) => {
        if (e.target === walletShortageModal) closeWalletShortage();
      });
    }

    if (walletPayConfirmBtn) {
      walletPayConfirmBtn.addEventListener("click", async () => {
        const amount = selectedPayType === "early" ? earlyAmount : installmentAmount;
        if (!Number.isFinite(amount) || amount <= 0) return;

        walletPayConfirmBtn.disabled = true;
        walletPayConfirmBtn.textContent = "Processing...";

        try {
          const res = await fetch("/paylater/wallet/pay", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ type: selectedPayType })
          });
          const data = await res.json();
          if (data.ok) {
            window.location.href = data.redirect || "/paylater";
            return;
          }
          if (data.error && data.error.includes("Insufficient")) {
            closeWalletPayModal();
            showWalletShortage(data.needed || (amount - walletBalance));
            return;
          }
          alert(data.error || "Wallet payment failed.");
        } catch (err) {
          alert("An error occurred while paying with wallet. Please try again.");
        } finally {
          walletPayConfirmBtn.disabled = false;
          walletPayConfirmBtn.textContent = "Pay Now";
        }
      });
    }
  </script>
</body>
</html>
