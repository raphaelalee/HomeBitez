<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>HomeBitez | Phone Verification</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Sniglet:wght@700;900&family=Sora:wght@300;400;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --cream: #fff5ea;
      --cream-deep: #fde8cf;
      --card: #ffffff;
      --ink: #1d1d1d;
      --muted: #6c6c6c;
      --accent: #f0a400;
      --accent-deep: #e38f00;
      --shadow: 0 16px 38px rgba(20, 20, 20, 0.12);
      --border: rgba(20, 20, 20, 0.12);
    }

    * { box-sizing: border-box; }

    body {
      margin: 0;
      font-family: "Sora", sans-serif;
      color: var(--ink);
      background:
        radial-gradient(1200px 600px at 10% -10%, #fff1de 0%, transparent 60%),
        linear-gradient(180deg, var(--cream) 0%, #fff8f0 100%);
      min-height: 100vh;
    }

    header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 20px 60px;
      background: #fff;
      box-shadow: 0 6px 18px rgba(20, 20, 20, 0.06);
    }

    .logo {
      font-family: "Sniglet", cursive;
      font-size: 26px;
      font-weight: 900;
      color: var(--accent);
    }

    nav a {
      margin: 0 12px;
      text-decoration: none;
      color: var(--ink);
      font-weight: 600;
      font-size: 14px;
    }

    .page {
      display: grid;
      place-items: center;
      padding: 60px 20px 80px;
    }

    .card-wrap {
      position: relative;
      display: inline-block;
    }

    .card {
      position: relative;
      width: min(520px, 92vw);
      background: var(--card);
      border-radius: 18px;
      box-shadow: var(--shadow);
      padding: 34px 38px 30px;
      text-align: center;
      border: 1px solid var(--border);
    }

    .eyebrow {
      font-size: 12px;
      letter-spacing: 0.14em;
      text-transform: uppercase;
      color: var(--muted);
      font-weight: 700;
      margin-bottom: 6px;
    }

    h1 {
      font-size: 22px;
      margin: 0 0 8px;
    }

    .desc {
      font-size: 14px;
      color: var(--muted);
      margin-bottom: 18px;
      line-height: 1.6;
    }

    .contact {
      font-weight: 700;
      color: var(--ink);
    }

    .code-row {
      display: grid;
      grid-template-columns: repeat(6, minmax(0, 1fr));
      gap: 10px;
      width: 100%;
      max-width: 420px;
      margin: 20px auto 16px;
    }

    .code-row input {
      min-width: 0;
      height: 54px;
      border-radius: 12px;
      border: 1px solid var(--border);
      text-align: center;
      font-size: 20px;
      font-weight: 700;
      outline: none;
      background: #fff9f1;
      transition: border-color 0.15s ease, box-shadow 0.15s ease;
    }

    .code-row input:focus {
      border-color: var(--accent);
      box-shadow: 0 0 0 3px rgba(240, 164, 0, 0.18);
      background: #ffffff;
    }

    .btn {
      width: 100%;
      padding: 12px 16px;
      border-radius: 10px;
      border: none;
      background: var(--accent);
      color: #fff;
      font-weight: 700;
      cursor: pointer;
      margin-top: 4px;
    }

    .btn:hover { background: var(--accent-deep); }

    .resend {
      background: none;
      border: none;
      color: var(--accent);
      font-weight: 700;
      cursor: pointer;
      margin-top: 12px;
    }

    .flash {
      margin-top: 12px;
      font-size: 13px;
      color: #b91c1c;
    }

    .toast {
      position: absolute;
      top: -10px;
      left: 50%;
      transform: translate(-50%, -100%);
      background: #fff;
      border: 1px solid var(--border);
      box-shadow: var(--shadow);
      padding: 10px 18px;
      border-radius: 999px;
      font-size: 13px;
      color: var(--ink);
      font-weight: 700;
      min-width: 220px;
      text-align: center;
      display: none;
      z-index: 20;
    }

    .toast.show { display: block; }

    @media (max-width: 700px) {
      header { padding: 16px 24px; }
      .code-row { grid-template-columns: repeat(3, 1fr); }
    }
  </style>
</head>
<body>
  <header>
    <div class="logo">HomeBitez</div>
    <nav>
      <a href="/">Home</a>
      <a href="/menu">Menu</a>
      <a href="/contact">Contact</a>
    </nav>
  </header>

  <main class="page">
    <div class="card-wrap">
      <div class="toast" id="toast"></div>
      <section class="card">
      <div class="eyebrow">Account Verification</div>
      <h1>Verify your phone</h1>
      <p class="desc">
        Enter the one-time code sent to <span class="contact"><%= maskedPhone %></span>.
        You will verify your email (<span class="contact"><%= maskedEmail %></span>) next.
      </p>

      <form action="/2fa/phone/verify" method="POST" id="codeForm">
        <input type="hidden" name="code" id="fullCode" />
        <div class="code-row">
          <input inputmode="numeric" maxlength="1" autocomplete="one-time-code" />
          <input inputmode="numeric" maxlength="1" />
          <input inputmode="numeric" maxlength="1" />
          <input inputmode="numeric" maxlength="1" />
          <input inputmode="numeric" maxlength="1" />
          <input inputmode="numeric" maxlength="1" />
        </div>
        <button class="btn" type="submit">Verify</button>
      </form>

      <form action="/2fa/phone/resend" method="POST">
        <button class="resend" type="submit">Resend code</button>
      </form>

      <% if (error && error.length) { %>
        <div class="flash"><%= error[0] %></div>
      <% } %>
    </section>
    </div>
  </main>

  <script>
    (() => {
      const inputs = Array.from(document.querySelectorAll('.code-row input'));
      const hidden = document.getElementById('fullCode');

      function syncCode() {
        hidden.value = inputs.map(i => i.value.trim()).join('');
      }

      inputs.forEach((input, idx) => {
        input.addEventListener('input', () => {
          input.value = input.value.replace(/\D/g, '').slice(0, 1);
          if (input.value && inputs[idx + 1]) inputs[idx + 1].focus();
          syncCode();
        });

        input.addEventListener('keydown', (e) => {
          if (e.key === 'Backspace' && !input.value && inputs[idx - 1]) {
            inputs[idx - 1].focus();
          }
        });
      });

      document.getElementById('codeForm').addEventListener('submit', () => {
        syncCode();
      });

      const toast = document.getElementById('toast');
      const flash = <%- JSON.stringify(success && success.length ? success[0] : '') %>;
      if (flash) {
        toast.textContent = flash;
        toast.classList.add('show');
        setTimeout(() => toast.classList.remove('show'), 5000);
      }
    })();
  </script>
</body>
</html>
