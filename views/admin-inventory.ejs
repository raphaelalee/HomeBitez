<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>HomeBitez - Inventory</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Sniglet:wght@700;900&family=Sora:wght@300;400;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --cream: #fff5ea;
      --cream-deep: #fde8cf;
      --card: #ffffff;
      --ink: #1d1d1d;
      --muted: #6c6c6c;
      --accent: #f0a400;
      --accent-deep: #e38f00;
      --line: rgba(20, 20, 20, 0.12);
      --shadow: 0 12px 28px rgba(20, 20, 20, 0.08);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: "Sora", sans-serif;
      color: var(--ink);
      background:
        radial-gradient(1200px 600px at 10% -10%, #fff1de 0%, transparent 60%),
        linear-gradient(180deg, var(--cream) 0%, #fff8f0 100%);
      min-height: 100vh;
    }

    .page {
      max-width: 1200px;
      margin: 42px auto 96px;
      padding: 0 28px;
      text-align: center;
    }

    .page-title {
      font-size: 24px;
      font-weight: 700;
      margin-bottom: 20px;
    }

    .page-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 16px;
      margin-bottom: 16px;
      text-align: left;
    }

    .page-header .page-title {
      margin-bottom: 0;
    }

    .btn-primary {
      background: var(--accent);
      color: #fff;
      border: none;
      border-radius: 999px;
      padding: 8px 16px;
      font-size: 13px;
      font-weight: 600;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 6px;
      box-shadow: 0 8px 18px rgba(240, 164, 0, 0.2);
    }

    .btn-primary:hover {
      background: var(--accent-deep);
    }

    .table-card {
      background: var(--card);
      border-radius: 12px;
      box-shadow: var(--shadow);
      border: 1px solid var(--line);
      padding: 10px 8px 0;
      overflow-x: auto;
      text-align: left;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 13px;
      min-width: 860px;
    }

    thead th {
      font-weight: 700;
      padding: 10px 12px;
      border-bottom: 1px solid var(--line);
      white-space: nowrap;
    }

    tbody td {
      padding: 12px 12px;
      border-bottom: 1px solid var(--line);
      vertical-align: middle;
    }

    tbody tr:last-child td {
      border-bottom: none;
    }

    .product-img {
      width: 46px;
      height: 46px;
      border-radius: 10px;
      object-fit: cover;
      background: #f1f1f1;
      border: 1px solid rgba(20, 20, 20, 0.08);
    }

    .biz-avatar {
      width: 34px;
      height: 34px;
      border-radius: 50%;
      background: #f0a400;
      color: #fff;
      font-weight: 700;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      font-size: 12px;
      text-transform: uppercase;
    }

    .actions {
      display: flex;
      gap: 8px;
      align-items: center;
      white-space: nowrap;
    }
    .btn.small { padding: 8px 12px; font-size: 13px; }
    .btn.danger {
      background: #c92a2a;
      color: #fff;
      border: none;
      box-shadow: 0 6px 14px rgba(201,42,42,0.18);
    }
    .btn.danger:hover { background: #b02626; }

    .empty {
      text-align: center;
      padding: 28px 0 32px;
      color: var(--muted);
      font-weight: 600;
    }

    @media (max-width: 600px) {
      .page {
        padding: 0 18px;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/navbar-admin') %>

  <main class="page">
    <div class="page-header">
      <h1 class="page-title">HomeBitez Inventory</h1>
      <a class="btn-primary" href="/admin/products/add">+ Add Product</a>
    </div>
    <section class="table-card">
      <table>
        <thead>
          <tr>
            <th>Product Name</th>
            <th>Product Image</th>
            <th>Business Name</th>
            <th>Business Image</th>
            <th>Stock</th>
            <th>Price</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% if (!products.length) { %>
            <tr>
              <td class="empty" colspan="10">No products found.</td>
            </tr>
          <% } %>
          <% products.forEach(product => { %>
            <% const bizName = product.businessName || "Unknown"; %>
            <% const initials = bizName.split(" ").filter(Boolean).map(s => s[0]).join("").slice(0, 2); %>
            <tr>
              <td><%= product.productName || "-" %></td>
              <td>
                <% if (product.image) { %>
                  <img class="product-img" src="/images/<%= product.image %>" alt="product">
                <% } else { %>
                  <div class="product-img"></div>
                <% } %>
              </td>
              <td><%= bizName %></td>
              <td><span class="biz-avatar"><%= initials || "HB" %></span></td>
              <td><%= Number.isFinite(Number(product.quantity)) ? Number(product.quantity) : 0 %></td>
              <td>$<%= Number(product.price || 0).toFixed(2) %></td>
              <td>
                <div class="actions">
                  <a href="/admin/products/edit/<%= product.id %>" class="btn ghost small">Edit</a>
                  <form action="/admin/products/delete/<%= product.id %>" method="POST" onsubmit="return confirm('Delete this product?');" style="display:inline;">
                    <button class="btn danger small" type="submit">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </main>
</body>
</html>
