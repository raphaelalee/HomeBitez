<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Digital Wallet</title>
  <style>
    * { box-sizing: border-box; font-family: Arial, Helvetica, sans-serif; }
    body { margin: 0; background: #f7efe5; display: flex; justify-content: center; padding: 24px; }
    .phone { width: 360px; background: #fdf2df; border-radius: 24px; padding: 20px; }
    .hidden { display: none; }

    .wallet-card { background: #f1a545; border-radius: 16px; padding: 20px; color: #fff; margin-bottom: 16px; }
    .wallet-card h2 { margin: 0 0 8px; font-size: 18px; }
    .balance { font-size: 22px; font-weight: bold; }

    .actions { display: flex; gap: 12px; margin-bottom: 16px; }
    .action-btn { flex: 1; background: #fff; border-radius: 12px; padding: 14px; font-weight: bold; border: none; cursor: pointer; }

    .list-item { background: #fff; border-radius: 12px; padding: 14px; display: flex; justify-content: space-between; margin-bottom: 12px; cursor: pointer; }
    .transactions { background: #fff; border-radius: 12px; padding: 16px; height: 160px; color: #999; }

    .header { display: flex; align-items: center; gap: 8px; margin-bottom: 16px; font-weight: bold; }
    .back { cursor: pointer; font-size: 18px; }

    .method { background: #fff; border-radius: 12px; padding: 14px; display: flex; justify-content: space-between; margin-bottom: 12px; cursor: pointer; }
    .input { width: 100%; padding: 14px; border-radius: 12px; border: 1px solid #ddd; margin-bottom: 16px; font-size: 16px; }

    .confirm-card { background: #fff; border-radius: 16px; padding: 20px; }
    .confirm-row { display: flex; justify-content: space-between; margin-bottom: 12px; font-size: 14px; }
    .confirm-btn { width: 100%; padding: 14px; border-radius: 20px; background: #f1a545; border: none; color: #fff; font-weight: bold; cursor: pointer; }
  </style>
</head>
<body>
<div class="phone">

  <!-- HOME -->
  <div id="home">
    <div class="wallet-card">
      <h2>homebitez wallet</h2>
      <div class="balance" id="balance">$50.00</div>
    </div>
    <div class="actions">
      <button class="action-btn" onclick="go('topup')">Top up</button>
      <button class="action-btn" onclick="go('transfer')">Transfer</button>
    </div>
    <div class="list-item"><span>Spend & Balance Limits</span><span>›</span></div>
    <div class="transactions">Wallet Transactions</div>
  </div>

  <!-- TOP UP -->
  <div id="topup" class="hidden">
    <div class="header"><span class="back" onclick="go('home')">←</span>Top Up</div>
    <input id="amount" class="input" type="number" placeholder="Enter amount" />
    <div class="method" onclick="selectMethod('Linked Bank')">Linked Bank Account ›</div>
    <div class="method" onclick="selectMethod('Card')">Credit / Debit Card ›</div>
    <div class="method" onclick="selectMethod('PayNow')">PayNow ›</div>
  </div>

  <!-- CONFIRM -->
  <div id="confirm" class="hidden">
    <div class="header"><span class="back" onclick="go('topup')">←</span>Confirm</div>
    <div class="confirm-card">
      <div class="confirm-row"><span>Method</span><span id="cMethod"></span></div>
      <div class="confirm-row"><span>Amount</span><span id="cAmount"></span></div>
      <div class="confirm-row"><span>Total</span><span id="cTotal"></span></div>
      <button class="confirm-btn" onclick="confirmTopUp()">CONFIRM</button>
    </div>
  </div>

  <!-- TRANSFER -->
  <div id="transfer" class="hidden">
    <div class="header"><span class="back" onclick="go('home')">←</span>Transfer</div>
    <input id="tRecipient" class="input" type="text" placeholder="Recipient username or ID" />
    <input id="tAmount" class="input" type="number" placeholder="Enter amount" />
    <div class="method" onclick="selectTransferMethod('Linked Bank')">Linked Bank Account ›</div>
    <div class="method" onclick="selectTransferMethod('Card')">Credit / Debit Card ›</div>
    <button class="confirm-btn" onclick="confirmTransfer()">TRANSFER</button>
  </div>

</div>

<script>
  let balance = 50.0;
  let method = '';

  function go(screen) {
    ['home','topup','confirm','transfer'].forEach(id => {
      const el = document.getElementById(id);
      if (el) el.classList.add('hidden');
    });
    document.getElementById(screen).classList.remove('hidden');
  }

  function selectMethod(m) {
    const amount = parseFloat(document.getElementById('amount').value);
    if (!isFinite(amount) || amount <= 0) { alert('Please enter a valid amount'); return; }
    method = m;
    document.getElementById('cMethod').innerText = m;
    document.getElementById('cAmount').innerText = `$${amount.toFixed(2)}`;
    document.getElementById('cTotal').innerText = `$${amount.toFixed(2)}`;
    go('confirm');
  }

  function confirmTopUp() {
    const amount = parseFloat(document.getElementById('amount').value);
    if (!isFinite(amount) || amount <= 0) { alert('Invalid amount'); go('topup'); return; }
    balance += amount;
    document.getElementById('balance').innerText = `$${balance.toFixed(2)}`;
    alert('Top up successful');
    document.getElementById('amount').value = '';
    go('home');
  }

    // Transfer functions
    function selectTransferMethod(m) {
      method = m;
      alert('Method selected: ' + m);
    }

    function confirmTransfer() {
      const recipient = document.getElementById('tRecipient').value.trim();
      const amount = parseFloat(document.getElementById('tAmount').value);
      if (!recipient) { alert('Please enter a recipient'); return; }
      if (!isFinite(amount) || amount <= 0) { alert('Please enter a valid amount'); return; }
      if (amount > balance) { alert('Insufficient balance'); return; }
      balance -= amount;
      document.getElementById('balance').innerText = `$${balance.toFixed(2)}`;
      alert(`Transferred $${amount.toFixed(2)} to ${recipient}`);
      document.getElementById('tRecipient').value = '';
      document.getElementById('tAmount').value = '';
      go('home');
    }
</script>
</body>
</html>
