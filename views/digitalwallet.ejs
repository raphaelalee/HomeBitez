<!DOCTYPE html>
<html>
<head>
  <title>HomeBitez Digital Wallet</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 40px;
      background: #fff6eb;
      text-align: center;
    }

    .card {
      background: white;
      padding: 30px;
      border-radius: 10px;
      width: 420px;
      margin: auto;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    h1 {
      margin-bottom: 10px;
    }

    input {
      padding: 10px;
      margin-top: 15px;
      width: 100%;
      box-sizing: border-box;
      font-size: 16px;
    }

    .btn {
      padding: 12px;
      margin-top: 12px;
      width: 100%;
      font-weight: bold;
      border: none;
      cursor: pointer;
      border-radius: 6px;
      font-size: 15px;
    }

    .card-btn { background: #4CAF50; color: white; }
    .paypal-btn { background: #0070ba; color: white; }
    .paynow-btn { background: #f4b400; color: black; }

    .note {
      margin-top: 15px;
      font-size: 13px;
      color: #666;
    }
  </style>
</head>
<body>

  <div class="card">
    <h2>Your Wallet Balance</h2>
    <h1>$<%= balance.toFixed(2) %></h1>

    <h3>Enter Top-Up Amount</h3>
    <input type="number" id="amount" placeholder="Enter amount" min="1" step="0.01">

    <button class="btn card-btn" onclick="payCard()">Top Up with Card</button>
    <button class="btn paypal-btn" onclick="payPaypal()">Top Up with PayPal</button>
    <button class="btn paynow-btn" onclick="payPayNow()">Top Up with PayNow</button>

    <div class="note">
      You will be redirected to a secure payment page.  
      Wallet will be credited only after successful payment.
    </div>
  </div>

<script>
function getAmount() {
  const amount = parseFloat(document.getElementById('amount').value);

  if (!amount || amount <= 0) {
    alert("Please enter a valid amount.");
    return null;
  }

  return amount.toFixed(2);
}

function payCard() {
  const amount = getAmount();
  if (!amount) return;
  window.location.href = `/wallet/card?amount=${amount}`;
}

function payPaypal() {
  const amount = getAmount();
  if (!amount) return;
  window.location.href = `/wallet/paypal?amount=${amount}`;
}

function payPayNow() {
  const amount = getAmount();
  if (!amount) return;
  window.location.href = `/wallet/paynow?amount=${amount}`;
}
</script>

</body>
</html>
