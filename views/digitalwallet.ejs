<!DOCTYPE html>
<html>
<head>
  <title>Digital Wallet</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 40px;
      background: #fff6eb;
      text-align: center;
    }

    .card {
      background: white;
      padding: 30px;
      border-radius: 10px;
      width: 400px;
      margin: auto;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    input, button {
      padding: 10px;
      margin-top: 15px;
      width: 100%;
      box-sizing: border-box;
    }

    button {
      background: #f4b400;
      border: none;
      font-weight: bold;
      cursor: pointer;
    }
  </style>
</head>
<body>

  <div class="card">
    <h2>Your Wallet Balance</h2>
    <h1>$<%= balance.toFixed(2) %></h1>

    <h3>Top Up Wallet</h3>
    <input type="number" id="amount" placeholder="Enter amount" min="1" step="0.01">
    <button onclick="topUp()">Top Up</button>
  </div>

<script>
function topUp() {
  const amount = parseFloat(document.getElementById('amount').value);
  if (!amount || amount <= 0) {
    alert("Enter valid amount");
    return;
  }

  // Get redirect page from query string, default to checkout
  const urlParams = new URLSearchParams(window.location.search);
  const redirect = urlParams.get('redirect') || '/checkout';

  fetch('/digitalwallet/topup', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ amount, redirect })
  })
  .then(res => res.json())
  .then(data => {
    if (data.success) {
      alert("Top up successful!");
      window.location.href = data.redirect; // automatically redirect back
    } else {
      alert(data.error || "Top up failed");
    }
  });
}
</script>

</body>
</html>
