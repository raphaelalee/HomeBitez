<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= brand || "HomeBitez" %> Checkout</title>

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Sniglet:wght@700;900&display=swap" rel="stylesheet">

  <!-- Bootstrap CSS & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <!-- PayPal SDK -->
  <script src="https://www.paypal.com/sdk/js?client-id=<%= paypalClientId %>&currency=<%= paypalCurrency %>"></script>

  <style>
    body{
      margin:0;
      font-family: Arial, sans-serif;
      background:#faefe5; /* menu background */
    }

    .hb-title{
      text-align:center;
      font-family: 'Sniglet', system-ui, sans-serif;
      font-size:26px;
      margin-top:10px;
      margin-bottom:5px;
    }
    .hb-sub{
      text-align:center;
      color:#6b6b6b;
      font-size:13px;
      margin-bottom: 6px;
    }
    .hb-underline{
      width:70px;
      height:3px;
      background:#dd9b00; /* menu accent */
      margin:0 auto 22px;
      border-radius: 99px;
    }

    .hb-wrap{
      padding: 0 40px 40px;
      max-width: 1100px;
      margin: 0 auto;
    }

    .hb-grid{
      display:grid;
      grid-template-columns: 1.45fr 1fr;
      gap: 24px;
      align-items:start;
    }

    @media (max-width: 992px){
      .hb-wrap{ padding: 0 16px 36px; }
      .hb-grid{ grid-template-columns: 1fr; }
    }

    .hb-card{
      background:white;
      border-radius:12px;
      padding:16px;
      box-shadow:0 2px 6px rgba(0,0,0,0.1);
      border: 1px solid #eee;
    }

    .hb-card-title{
      font-family: 'Sniglet', system-ui, sans-serif;
      font-size:18px;
      margin-bottom: 12px;
      display:flex;
      align-items:center;
      gap: 10px;
    }

    .hb-pill{
      display:inline-flex;
      align-items:center;
      gap:8px;
      padding: 6px 12px;
      background:#fff7e3;
      border:1px solid #ffe2a6;
      border-radius:999px;
      font-size:12px;
      color:#7a5a00;
      white-space: nowrap;
    }

    table{
      font-size:14px;
    }
    .hb-table thead th{
      color:#5a5a5a;
      font-weight:700;
      border-bottom: 1px solid #eee !important;
    }
    .hb-table td{
      border-bottom: 1px dashed #eee !important;
      padding-top: 10px !important;
      padding-bottom: 10px !important;
    }

    .hb-summary{
      margin-top: 10px;
      border-top: 1px solid #eee;
      padding-top: 12px;
      font-size:14px;
    }
    .hb-line{
      display:flex;
      justify-content:space-between;
      color:#5a5a5a;
      margin: 6px 0;
    }
    .hb-total{
      display:flex;
      justify-content:space-between;
      align-items:baseline;
      margin-top: 10px;
      font-weight:900;
      font-size:18px;
      color:#1f1f1f;
    }
    .hb-total span:last-child{
      color:#dd9b00;
      font-size:20px;
    }

    .hb-input{
      border-radius: 12px;
      border: 1px solid #eee;
      padding: 10px 12px;
      font-size: 14px;
      outline: none;
    }
    .hb-input:focus{
      border-color: #dd9b00;
      box-shadow: 0 0 0 0.15rem rgba(221,155,0,0.2);
    }
    .hb-label{
      font-size: 13px;
      color:#5a5a5a;
      margin-bottom: 6px;
      font-weight: 700;
    }

    .hb-note{
      font-size: 12px;
      color:#7a7a7a;
      margin-top: 10px;
    }

    .hb-btn{
      margin-top:10px;
      padding:10px 16px;
      background:#dd9b00;
      color:white;
      border:none;
      border-radius:20px;
      cursor:pointer;
      font-size:14px;
      font-weight: 700;
      text-decoration:none;
      display:inline-flex;
      align-items:center;
      gap:8px;
      justify-content:center;
    }
    .hb-btn:hover{ filter: brightness(0.97); }

    .hb-btn-outline{
      background: white;
      color:#dd9b00;
      border: 1px solid #dd9b00;
    }

    /* PayPal container nicer spacing */
    #paypal-button-container{
      margin-top: 10px;
    }
  </style>
</head>

<body>

  <!-- Keep your navbar like menu -->
  <%- include('partials/navbar') %>

  <h2 class="hb-title">Checkout</h2>
  <div class="hb-sub">No drama. Just food.</div>
  <div class="hb-underline"></div>

  <div class="hb-wrap">

    <% if (!items || items.length === 0) { %>
      <div class="hb-card">
        <div class="alert alert-warning mb-0">
          Your cart is empty.
        </div>
        <div class="mt-3">
          <a class="hb-btn hb-btn-outline" href="/menu"><i class="bi bi-arrow-left"></i> Back to Menu</a>
        </div>
      </div>
    <% } else { %>

      <div class="hb-grid">

        <!-- LEFT: Order + Delivery -->
        <div style="display:flex; flex-direction:column; gap:24px;">

          <div class="hb-card">
            <div class="hb-card-title">
              <i class="bi bi-bag-heart"></i>
              Order Summary
              <span class="hb-pill"><i class="bi bi-receipt"></i> <%= items.length %> item(s)</span>
            </div>

            <div class="table-responsive">
              <table class="table hb-table align-middle mb-0">
                <thead>
                  <tr>
                    <th>Item</th>
                    <th class="text-end">Price</th>
                    <th class="text-end">Qty</th>
                    <th class="text-end">Total</th>
                  </tr>
                </thead>
                <tbody>
                  <% items.forEach(i => { %>
                    <tr>
                      <td><strong><%= i.name %></strong></td>
                      <td class="text-end">$<%= Number(i.price || 0).toFixed(2) %></td>
                      <td class="text-end"><%= Number(i.qty || 0) %></td>
                      <td class="text-end">$<%= Number(i.subtotal || (Number(i.price||0)*Number(i.qty||0))).toFixed(2) %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>

            <div class="hb-summary">
              <div class="hb-line">
                <span>Subtotal</span>
                <span>$<%= Number(subtotal || 0).toFixed(2) %></span>
              </div>
              <div class="hb-line">
                <span>Delivery Fee</span>
                <span>$<%= Number(defaultDeliveryFee || 0).toFixed(2) %></span>
              </div>
              <div class="hb-total">
                <span>Total</span>
                <span>$<%= Number(total || 0).toFixed(2) %></span>
              </div>
            </div>

            <div class="mt-3 d-flex gap-2 flex-wrap">
              <a class="hb-btn hb-btn-outline" href="/cart"><i class="bi bi-cart3"></i> Back to Cart</a>
              <a class="hb-btn" href="/menu"><i class="bi bi-plus-circle"></i> Add More</a>
            </div>
          </div>

          <div class="hb-card">
            <div class="hb-card-title">
              <i class="bi bi-geo-alt"></i>
              Delivery Details
              <span class="hb-pill"><i class="bi bi-info-circle"></i> display only</span>
            </div>

            <div class="row g-3">
              <div class="col-md-6">
                <div class="hb-label">Name</div>
                <input class="form-control hb-input" id="shippingName" placeholder="Your name"
                  value="<%= (user && (user.username || user.name)) ? (user.username || user.name) : '' %>">
              </div>
              <div class="col-md-6">
                <div class="hb-label">Contact</div>
                <input class="form-control hb-input" id="shippingPhone" placeholder="8-digit SG number">
              </div>
              <div class="col-12">
                <div class="hb-label">Address</div>
                <input class="form-control hb-input" id="shippingAddress" placeholder="Where should the food go?">
              </div>
              <div class="col-12">
                <div class="hb-label">Notes (optional)</div>
                <input class="form-control hb-input" id="notes" placeholder="No onions, extra chili, etc.">
              </div>
            </div>

            <div class="hb-note">
              Delivery details are for display only right now (checkout-only). You can save it later when you do “orders”.
            </div>
          </div>

        </div>

        <!-- RIGHT: PayPal -->
        <div class="hb-card">
          <div class="hb-card-title">
            <i class="bi bi-paypal"></i>
            Pay with PayPal
            <span class="hb-pill"><i class="bi bi-shield-check"></i> secure</span>
          </div>

          <div id="paypal-button-container"></div>
          <div id="paypal-status" class="hb-note"></div>

          <script>
            // Data from server-rendered view
            const checkoutSubtotal = <%= Number(subtotal || 0).toFixed(2) %>;
            const checkoutDeliveryFee = <%= Number(defaultDeliveryFee || 0).toFixed(2) %>;
            const checkoutItems = <%- JSON.stringify(items || []) %>;

            function getShippingName() {
              const el = document.getElementById("shippingName");
              return el ? (el.value || "").trim() : "";
            }

            paypal.Buttons({
              createOrder: async () => {
                const payload = {
                  items: checkoutItems,
                  subtotal: checkoutSubtotal,
                  deliveryFee: checkoutDeliveryFee,
                  shippingName: getShippingName()
                };

                const res = await fetch("/paypal/create-order", {
                  method: "POST",
                  headers: { "Content-Type": "application/json" },
                  body: JSON.stringify(payload)
                });

                const data = await res.json();
                if (!res.ok) {
                  throw new Error(data.error || "Failed to create PayPal order");
                }
                return data.id;
              },

              onApprove: async (data) => {
                const res = await fetch("/paypal/capture-order", {
                  method: "POST",
                  headers: { "Content-Type": "application/json" },
                  body: JSON.stringify({ orderId: data.orderID })
                });

                const result = await res.json();
                if (!res.ok || !result.ok) {
                  throw new Error(result.error || "Payment capture failed");
                }

                document.getElementById("paypal-status").innerText =
                  "Payment completed. Order captured successfully.";
              },

              onError: (err) => {
                console.error(err);
                document.getElementById("paypal-status").innerText =
                  "PayPal error: " + (err && err.message ? err.message : "Unknown error");
              }
            }).render("#paypal-button-container");
          </script>

        </div>

      </div>
    <% } %>

  </div>

</body>
</html>
